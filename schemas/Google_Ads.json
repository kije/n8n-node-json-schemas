            "THIS_MONTH",
            "LAST_MONTH",
            "LAST_14_DAYS",
            "LAST_30_DAYS"
          ],
          "x-enumNames": [
            "All Time",
            "Today",
            "Yesterday",
            "Last 7 Days",
            "Last Business Week",
            "This Month",
            "Last Month",
            "Last 14 Days",
            "Last 30 Days"
          ],
          "x-enumDescriptions": [
            "Fetch statistics for all period",
            "Today only",
            "Yesterday only",
            "Last 7 days, not including today",
            "The 5 day business week, Monday through Friday, of the previous business week",
            "All days in the current month",
            "All days in the previous month",
