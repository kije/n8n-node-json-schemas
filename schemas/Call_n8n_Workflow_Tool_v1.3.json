{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Call n8n Workflow Tool",
  "description": "Uses another n8n workflow as a tool. Allows packaging any n8n node(s) as a tool.",
  "x-n8n-node-type": "toolWorkflow",
  "x-n8n-version": 1.3,
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "name": {
      "x-title": "Name",
      "description": "The name of the function to be called, could contain letters, numbers, and underscores only",
      "default": "",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.1
              }
            }
          ]
        }
      },
      "type": "string"
    },
    "description": {
      "x-title": "Description",
      "default": "",
      "type": "string",
      "x-rows": 3
    },
    "source": {
      "x-title": "Source",
      "description": "Where to get the workflow to execute from",
      "default": "database",
      "type": "string",
      "enum": [
        "database",
        "parameter"
      ],
      "x-enumNames": [
        "Database",
        "Define Below"
      ],
      "x-enumDescriptions": [
        "Load the workflow from the database by ID",
        "Pass the JSON code of a workflow"
      ]
    },
    "workflowId": {
      "x-title": "Workflow",
      "default": "",
      "x-displayOptions": {
        "show": {
          "source": [
            "database"
          ],
          "@version": [
            {
              "_cnd": {
                "gte": 1.2
              }
            }
          ]
        }
      },
      "x-required": true,
      "type": "string",
      "x-n8n-type": "workflowSelector"
    },
    "workflowJson": {
      "x-title": "Workflow JSON",
      "description": "The workflow JSON code to execute",
      "default": "\n\n\n\n\n\n\n\n\n",
      "x-displayOptions": {
        "show": {
          "source": [
            "parameter"
          ]
        }
      },
      "x-required": true,
      "oneOf": [
        {
          "type": "string",
          "description": "JSON string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "responsePropertyName": {
      "x-title": "Field to Return",
      "description": "Where to find the data that this tool should return. n8n will look in the output of the last-executed node of the workflow for a field with this name, and return its value.",
      "default": "response",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "lt": 1.3
              }
            }
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "fields": {
      "x-title": "Extra Workflow Inputs",
      "description": "These will be output by the 'execute workflow' trigger of the workflow being called",
      "default": {},
      "type": "object",
      "properties": {
        "values": {
          "x-title": "Values",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "x-title": "Name",
                "description": "Name of the field to set the value of. Supports dot-notation. Example: data.person[0].name.",
                "default": "",
                "type": "string"
              },
              "type": {
                "x-title": "Type",
                "description": "The field value type",
                "default": "stringValue",
                "type": "string",
                "enum": [
                  "stringValue",
                  "numberValue",
                  "booleanValue",
                  "arrayValue",
                  "objectValue"
                ],
                "x-enumNames": [
                  "String",
                  "Number",
                  "Boolean",
                  "Array",
                  "Object"
                ]
              },
              "stringValue": {
                "x-title": "Value",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "type": [
                      "stringValue"
                    ]
                  }
                },
                "type": "string"
              },
              "numberValue": {
                "x-title": "Value",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "type": [
                      "numberValue"
                    ]
                  }
                },
                "type": "string"
              },
              "booleanValue": {
                "x-title": "Value",
                "default": "true",
                "x-displayOptions": {
                  "show": {
                    "type": [
                      "booleanValue"
                    ]
                  }
                },
                "type": "string",
                "enum": [
                  "true",
                  "false"
                ],
                "x-enumNames": [
                  "True",
                  "False"
                ]
              },
              "arrayValue": {
                "x-title": "Value",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "type": [
                      "arrayValue"
                    ]
                  }
                },
                "type": "string"
              },
              "objectValue": {
                "x-title": "Value",
                "default": "={}",
                "x-displayOptions": {
                  "show": {
                    "type": [
                      "objectValue"
                    ]
                  }
                },
                "oneOf": [
                  {
                    "type": "string",
                    "description": "JSON string"
                  },
                  {
                    "type": "object"
                  },
                  {
                    "type": "array"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "specifyInputSchema": {
      "x-title": "Specify Input Schema",
      "description": "Whether to specify the schema for the function. This would require the LLM to provide the input in the correct format and would validate it against the schema.",
      "default": false,
      "type": "boolean"
    },
    "schemaType": {
      "x-title": "Schema Type",
      "description": "How to specify the schema for the function",
      "default": "fromJson",
      "x-displayOptions": {
        "show": {
          "specifyInputSchema": [
            true
          ]
        }
      },
      "type": "string",
      "enum": [
        "fromJson",
        "manual"
      ],
      "x-enumNames": [
        "Generate From JSON Example",
        "Define using JSON Schema"
      ],
      "x-enumDescriptions": [
        "Generate a schema from an example JSON object",
        "Define the JSON schema manually"
      ]
    },
    "jsonSchemaExample": {
      "x-title": "JSON Example",
      "description": "Example JSON object to use to generate the schema",
      "default": "{\n\t\"some_input\": \"some_value\"\n}",
      "x-displayOptions": {
        "show": {
          "schemaType": [
            "fromJson"
          ]
        }
      },
      "oneOf": [
        {
          "type": "string",
          "description": "JSON string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "inputSchema": {
      "x-title": "Input Schema",
      "description": "Schema to use for the function",
      "default": "{\n\"type\": \"object\",\n\"properties\": {\n\t\"some_input\": {\n\t\t\"type\": \"string\",\n\t\t\"description\": \"Some input to the function\"\n\t\t}\n\t}\n}",
      "x-displayOptions": {
        "show": {
          "schemaType": [
            "manual"
          ]
        }
      },
      "oneOf": [
        {
          "type": "string",
          "description": "JSON string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    }
  },
  "x-icon": "fa:network-wired",
  "x-inputs": [],
  "x-outputs": [
    "ai_tool"
  ]
}
