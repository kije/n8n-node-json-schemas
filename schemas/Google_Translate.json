{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Google Translate",
  "description": "Translate data using Google Translate",
  "x-n8n-node-type": "googleTranslate",
  "x-n8n-version": [
    1,
    2
  ],
  "x-n8n-group": [
    "input",
    "output"
  ],
  "type": "object",
  "properties": {
    "authentication": {
      "x-title": "Authentication",
      "default": "oAuth2",
      "x-displayOptions": {
        "show": {
          "@version": [
            2
          ]
        }
      },
      "type": "string",
      "enum": [
        "oAuth2",
        "serviceAccount"
      ],
      "x-enumNames": [
        "OAuth2 (recommended)",
        "Service Account"
      ]
    },
    "resource": {
      "x-title": "Resource",
      "default": "language",
      "type": "string",
      "enum": [
        "language"
      ],
      "x-enumNames": [
        "Language"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "translate",
      "x-displayOptions": {
        "show": {
          "resource": [
            "language"
          ]
        }
      },
      "type": "string",
      "enum": [
        "translate"
      ],
      "x-enumNames": [
        "Translate"
      ],
      "x-enumDescriptions": [
        "Translate data"
      ]
    },
    "text": {
      "x-title": "Text",
      "description": "The input text to translate",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "translate"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "translateTo": {
      "x-title": "Translate To",
      "description": "The language to use for translation of the input text, set to one of the language codes listed in <a href=\"https://cloud.google.com/translate/docs/languages\">Language Support</a>. Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>.",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "translate"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    }
  },
  "x-subtitle": "={{$parameter[\"operation\"] + \": \" + $parameter[\"resource\"]}}",
  "x-icon": "file:googletranslate.png",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "googleApi",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "serviceAccount"
          ]
        }
      }
    },
    {
      "name": "googleTranslateOAuth2Api",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "oAuth2"
          ]
        }
      }
    }
  ]
}
