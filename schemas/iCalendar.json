{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "iCalendar",
  "description": "Create iCalendar file",
  "x-n8n-node-type": "iCal",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "input"
  ],
  "type": "object",
  "properties": {
    "operation": {
      "x-title": "Operation",
      "default": "createEventFile",
      "type": "string",
      "enum": [
        "createEventFile"
      ],
      "x-enumNames": [
        "Create Event File"
      ]
    },
    "title": {
      "x-title": "Event Title",
      "default": "",
      "type": "string"
    },
    "start": {
      "x-title": "Start",
      "description": "Date and time at which the event begins. (For all-day events, the time will be ignored.).",
      "default": "",
      "x-required": true,
      "type": "string",
      "format": "date-time"
    },
    "end": {
      "x-title": "End",
      "description": "Date and time at which the event ends. (For all-day events, the time will be ignored.).",
      "default": "",
      "x-required": true,
      "type": "string",
      "format": "date-time"
    },
    "allDay": {
      "x-title": "All Day",
      "description": "Whether the event lasts all day or not",
      "default": false,
      "type": "boolean"
    },
    "binaryPropertyName": {
      "x-title": "Put Output File in Field",
      "description": "The field that your iCalendar file will be available under in the output",
      "default": "data",
      "x-required": true,
      "type": "string"
    },
    "additionalFields": {
      "x-title": "Options",
      "default": {},
      "type": "object",
      "properties": {
        "attendeesUi": {
          "x-title": "Attendees",
          "default": {},
          "type": "object",
          "properties": {
            "attendeeValues": {
              "x-title": "Attendees",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "x-title": "Name",
                    "default": "",
                    "x-required": true,
                    "type": "string"
                  },
                  "email": {
                    "x-title": "Email",
                    "default": "",
                    "x-required": true,
                    "type": "string"
                  },
                  "rsvp": {
                    "x-title": "RSVP",
                    "description": "Whether the attendee has to confirm attendance or not",
                    "default": false,
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "busyStatus": {
          "x-title": "Busy Status",
          "description": "Used to specify busy status for Microsoft applications, like Outlook",
          "default": "",
          "type": "string",
          "enum": [
            "BUSY",
            "TENTATIVE"
          ],
          "x-enumNames": [
            "Busy",
            "Tentative"
          ]
        },
        "calName": {
          "x-title": "Calendar Name",
          "description": "Specifies the calendar (not event) name. Used by Apple iCal and Microsoft Outlook. <a href=\"https://docs.microsoft.com/en-us/openspecs/exchange_server_protocols/ms-oxcical/1da58449-b97e-46bd-b018-a1ce576f3e6d\">More info</a>.",
          "default": "",
          "type": "string"
        },
        "description": {
          "x-title": "Description",
          "default": "",
          "type": "string"
        },
        "fileName": {
          "x-title": "File Name",
          "description": "The name of the file to be generated. Default name is event.ics.",
          "default": "",
          "type": "string"
        },
        "geolocationUi": {
          "x-title": "Geolocation",
          "default": {},
          "type": "object",
          "properties": {
            "geolocationValues": {
              "x-title": "Geolocation",
              "type": "object",
              "properties": {
                "lat": {
                  "x-title": "Latitude",
                  "default": "",
                  "type": "string"
                },
                "lon": {
                  "x-title": "Longitude",
                  "default": "",
                  "type": "string"
                }
              }
            }
          }
        },
        "location": {
          "x-title": "Location",
          "description": "The intended venue",
          "default": "",
          "type": "string"
        },
        "recurrenceRule": {
          "x-title": "Recurrence Rule",
          "description": "A rule to define the repeat pattern of the event (RRULE). (<a href=\"https://icalendar.org/rrule-tool.html\">Rule generator</a>).",
          "default": "",
          "type": "string"
        },
        "organizerUi": {
          "x-title": "Organizer",
          "default": {},
          "type": "object",
          "properties": {
            "organizerValues": {
              "x-title": "Organizer",
              "type": "object",
              "properties": {
                "name": {
                  "x-title": "Name",
                  "default": "",
                  "x-required": true,
                  "type": "string"
                },
                "email": {
                  "x-title": "Email",
                  "default": "",
                  "x-required": true,
                  "type": "string"
                }
              }
            }
          }
        },
        "sequence": {
          "x-title": "Sequence",
          "description": "When sending an update for an event (with the same uid), defines the revision sequence number",
          "default": 0,
          "type": "number"
        },
        "status": {
          "x-title": "Status",
          "default": "CONFIRMED",
          "type": "string",
          "enum": [
            "CONFIRMED",
            "CANCELLED",
            "TENTATIVE"
          ],
          "x-enumNames": [
            "Confirmed",
            "Cancelled",
            "Tentative"
          ]
        },
        "uid": {
          "x-title": "UID",
          "description": "Universally unique ID for the event (will be auto-generated if not specified here). Should be globally unique.",
          "default": "",
          "type": "string"
        },
        "url": {
          "x-title": "URL",
          "description": "URL associated with event",
          "default": "",
          "type": "string"
        },
        "useWorkflowTimezone": {
          "x-title": "Use Workflow Timezone",
          "description": "Whether to use the workflow timezone set in node's settings rather than UTC",
          "default": false,
          "type": "boolean"
        }
      }
    }
  },
  "x-subtitle": "={{$parameter[\"operation\"]}}",
  "x-icon": "fa:calendar",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": []
}
