{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "n8n Form Trigger",
  "description": "Generate webforms in n8n and pass their responses to the workflow",
  "x-n8n-node-type": "formTrigger",
  "x-n8n-version": 2.1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "authentication": {
      "x-title": "Authentication",
      "default": "none",
      "type": "string",
      "enum": [
        "basicAuth",
        "none"
      ],
      "x-enumNames": [
        "Basic Auth",
        "None"
      ]
    },
    "path": {
      "x-title": "Form Path",
      "description": "The final segment of the form's URL, both for test and production",
      "default": "",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "lte": 2.1
              }
            }
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "formTitle": {
      "x-title": "Form Title",
      "description": "Shown at the top of the form",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "formDescription": {
      "x-title": "Form Description",
      "description": "Shown underneath the Form Title. Can be used to prompt the user on how to complete the form. Accepts HTML. Does not accept <code>&lt;script&gt;</code>, <code>&lt;style&gt;</code> or <code>&lt;input&gt;</code> tags.",
      "default": "",
      "type": "string",
      "x-rows": 2
    },
    "formFields": {
      "x-title": "Form Elements",
      "default": {},
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 2.5
              }
            }
          ]
        }
      },
      "type": "object",
      "properties": {
        "values": {
          "x-title": "Values",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fieldName": {
                "x-title": "Custom Field Name",
                "description": "The name of the field, used in input attributes and referenced by the workflow",
                "default": "",
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "html"
                    ]
                  },
                  "show": {
                    "@version": [
                      {
                        "_cnd": {
                          "gte": 2.5
                        }
                      }
                    ]
                  }
                },
                "type": "string"
              },
              "fieldLabel": {
                "x-title": "Field Name",
                "description": "Label that appears above the input field",
                "default": "",
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "hiddenField",
                      "html"
                    ]
                  },
                  "show": {
                    "@version": [
                      {
                        "_cnd": {
                          "lt": 2.4
                        }
                      }
                    ]
                  }
                },
                "x-required": true,
                "type": "string"
              },
              "fieldType": {
                "x-title": "Element Type",
                "description": "The type of field to add to the form",
                "default": "text",
                "x-required": true,
                "type": "string",
                "enum": [
                  "checkbox",
                  "html",
                  "date",
                  "dropdown",
                  "email",
                  "file",
                  "hiddenField",
                  "number",
                  "password",
                  "radio",
                  "text",
                  "textarea"
                ],
                "x-enumNames": [
                  "Checkboxes",
                  "Custom HTML",
                  "Date",
                  "Dropdown",
                  "Email",
                  "File",
                  "Hidden Field",
                  "Number",
                  "Password",
                  "Radio Buttons",
                  "Text Input",
                  "Textarea"
                ]
              },
              "elementName": {
                "x-title": "Element Name",
                "description": "Optional field. It can be used to include the html in the output.",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "html"
                    ]
                  }
                },
                "type": "string"
              },
              "placeholder": {
                "x-title": "Placeholder",
                "description": "Sample text to display inside the field",
                "default": "",
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "dropdown",
                      "date",
                      "file",
                      "html",
                      "hiddenField",
                      "radio",
                      "checkbox"
                    ]
                  }
                },
                "type": "string"
              },
              "defaultValue": {
                "x-title": "Default Value",
                "description": "Default value(s) that will be pre-selected. Must match one or multiple of the option labels. Separate multiple pre-selected options with a comma.",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ]
                  }
                },
                "type": "string"
              },
              "fieldValue": {
                "x-title": "Field Value",
                "description": "Input value can be set here or will be passed as a query parameter via Field Name if no value is set",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "hiddenField"
                    ]
                  }
                },
                "type": "string"
              },
              "fieldOptions": {
                "x-title": "Radio Buttons",
                "default": {
                  "values": [
                    {
                      "option": ""
                    }
                  ]
                },
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "radio"
                    ]
                  }
                },
                "x-required": true,
                "type": "object",
                "properties": {
                  "values": {
                    "x-title": "Values",
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "option": {
                          "x-title": "Radio Button Label",
                          "default": "",
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "multiselect": {
                "x-title": "Multiple Choice",
                "description": "Whether to allow the user to select multiple options from the dropdown list",
                "default": false,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "dropdown"
                    ],
                    "@version": [
                      {
                        "_cnd": {
                          "lt": 2.3
                        }
                      }
                    ]
                  }
                },
                "type": "boolean"
              },
              "limitSelection": {
                "x-title": "Limit Selection",
                "default": "unlimited",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ]
                  }
                },
                "type": "string",
                "enum": [
                  "exact",
                  "range",
                  "unlimited"
                ],
                "x-enumNames": [
                  "Exact Number",
                  "Range",
                  "Unlimited"
                ]
              },
              "numberOfSelections": {
                "x-title": "Number of Selections",
                "default": 1,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ],
                    "limitSelection": [
                      "exact"
                    ]
                  }
                },
                "type": "number",
                "minimum": 1,
                "x-precision": 0
              },
              "minSelections": {
                "x-title": "Minimum Selections",
                "default": 0,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ],
                    "limitSelection": [
                      "range"
                    ]
                  }
                },
                "type": "number",
                "minimum": 0,
                "x-precision": 0
              },
              "maxSelections": {
                "x-title": "Maximum Selections",
                "default": 1,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ],
                    "limitSelection": [
                      "range"
                    ]
                  }
                },
                "type": "number",
                "minimum": 1,
                "x-precision": 0
              },
              "html": {
                "x-title": "HTML",
                "description": "HTML elements to display on the form page",
                "default": "<!-- Your custom HTML here --->\n\n\n",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "html"
                    ]
                  }
                },
                "type": "string",
                "x-editor": "htmlEditor"
              },
              "multipleFiles": {
                "x-title": "Multiple Files",
                "description": "Whether to allow the user to select multiple files from the file input or just one",
                "default": true,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "file"
                    ]
                  }
                },
                "type": "boolean"
              },
              "acceptFileTypes": {
                "x-title": "Accepted File Types",
                "description": "Comma-separated list of allowed file extensions",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "file"
                    ]
                  }
                },
                "type": "string"
              },
              "requiredField": {
                "x-title": "Required Field",
                "description": "Whether to require the user to enter a value for this field before submitting the form",
                "default": false,
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "html",
                      "hiddenField"
                    ]
                  }
                },
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "responseMode": {
      "x-title": "Respond When",
      "description": "When to respond to the form submission",
      "default": "onReceived",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 2.2
              }
            }
          ]
        }
      },
      "type": "string",
      "enum": [
        "onReceived",
        "lastNode"
      ],
      "x-enumNames": [
        "Form Is Submitted",
        "Workflow Finishes"
      ],
      "x-enumDescriptions": [
        "As soon as this node receives the form submission",
        "When the last node of the workflow is executed"
      ]
    },
    "options": {
      "x-title": "Options",
      "default": {},
      "type": "object",
      "properties": {
        "appendAttribution": {
          "x-title": "Append n8n Attribution",
          "description": "Whether to include the link “Form automated with n8n” at the bottom of the form",
          "default": true,
          "type": "boolean"
        },
        "ipWhitelist": {
          "x-title": "IP(s) Allowlist",
          "description": "Comma-separated list of allowed IP addresses or CIDR ranges. Leave empty to allow all IPs.",
          "default": "",
          "type": "string"
        },
        "buttonLabel": {
          "x-title": "Button Label",
          "description": "The label of the submit button in the form",
          "default": "Submit",
          "type": "string"
        },
        "path": {
          "x-title": "Form Path",
          "description": "The final segment of the form's URL, both for test and production",
          "default": "",
          "x-displayOptions": {
            "show": {
              "@version": [
                {
                  "_cnd": {
                    "gte": 2.2
                  }
                }
              ]
            }
          },
          "type": "string"
        },
        "respondWithOptions": {
          "x-title": "Form Response",
          "default": {
            "values": {
              "respondWith": "text"
            }
          },
          "x-displayOptions": {
            "hide": {
              "/responseMode": [
                "responseNode"
              ]
            }
          },
          "type": "object",
          "properties": {
            "values": {
              "x-title": "Values",
              "type": "object",
              "properties": {
                "respondWith": {
                  "x-title": "Respond With",
                  "default": "text",
                  "type": "string",
                  "enum": [
                    "text",
                    "redirect"
                  ],
                  "x-enumNames": [
                    "Form Submitted Text",
                    "Redirect URL"
                  ],
                  "x-enumDescriptions": [
                    "Show a response text to the user",
                    "Redirect the user to a URL"
                  ]
                },
                "formSubmittedText": {
                  "x-title": "Text to Show",
                  "description": "The text displayed to users after they fill the form. Leave it empty if don't want to show any additional text.",
                  "default": "Your response has been recorded",
                  "x-displayOptions": {
                    "show": {
                      "respondWith": [
                        "text"
                      ]
                    }
                  },
                  "type": "string"
                },
                "redirectUrl": {
                  "x-title": "URL to Redirect to",
                  "description": "The URL to redirect users to after they fill the form. Must be a valid URL.",
                  "default": "",
                  "x-displayOptions": {
                    "show": {
                      "respondWith": [
                        "redirect"
                      ]
                    }
                  },
                  "type": "string"
                }
              }
            }
          }
        },
        "ignoreBots": {
          "x-title": "Ignore Bots",
          "description": "Whether to ignore requests from bots like link previewers and web crawlers",
          "default": false,
          "type": "boolean"
        },
        "useWorkflowTimezone": {
          "x-title": "Use Workflow Timezone",
          "description": "Whether to use the workflow timezone in 'submittedAt' field or UTC",
          "default": true,
          "x-displayOptions": {
            "show": {
              "@version": [
                {
                  "_cnd": {
                    "gt": 2
                  }
                }
              ]
            }
          },
          "type": "boolean"
        },
        "customCss": {
          "x-title": "Custom Form Styling",
          "description": "Override default styling of the public form interface with CSS",
          "default": ":root {\n\t--font-family: 'Open Sans', sans-serif;\n\t--font-weight-normal: 400;\n\t--font-weight-bold: 600;\n\t--font-size-body: 12px;\n\t--font-size-label: 14px;\n\t--font-size-test-notice: 12px;\n\t--font-size-input: 14px;\n\t--font-size-header: 20px;\n\t--font-size-paragraph: 14px;\n\t--font-size-link: 12px;\n\t--font-size-error: 12px;\n\t--font-size-html-h1: 28px;\n\t--font-size-html-h2: 20px;\n\t--font-size-html-h3: 16px;\n\t--font-size-html-h4: 14px;\n\t--font-size-html-h5: 12px;\n\t--font-size-html-h6: 10px;\n\t--font-size-subheader: 14px;\n\n\t/* Colors */\n\t--color-background: #fbfcfe;\n\t--color-test-notice-text: #e6a23d;\n\t--color-test-notice-bg: #fefaf6;\n\t--color-test-notice-border: #f6dcb7;\n\t--color-card-bg: #ffffff;\n\t--color-card-border: #dbdfe7;\n\t--color-card-shadow: rgba(99, 77, 255, 0.06);\n\t--color-link: #7e8186;\n\t--color-header: #525356;\n\t--color-label: #555555;\n\t--color-input-border: #dbdfe7;\n\t--color-input-text: #71747A;\n\t--color-focus-border: rgb(90, 76, 194);\n\t--color-submit-btn-bg: #ff6d5a;\n\t--color-submit-btn-text: #ffffff;\n\t--color-error: #ea1f30;\n\t--color-required: #ff6d5a;\n\t--color-clear-button-bg: #7e8186;\n\t--color-html-text: #555;\n\t--color-html-link: #ff6d5a;\n\t--color-header-subtext: #7e8186;\n\n\t/* Border Radii */\n\t--border-radius-card: 8px;\n\t--border-radius-input: 6px;\n\t--border-radius-clear-btn: 50%;\n\t--card-border-radius: 8px;\n\n\t/* Spacing */\n\t--padding-container-top: 24px;\n\t--padding-card: 24px;\n\t--padding-test-notice-vertical: 12px;\n\t--padding-test-notice-horizontal: 24px;\n\t--margin-bottom-card: 16px;\n\t--padding-form-input: 12px;\n\t--card-padding: 24px;\n\t--card-margin-bottom: 16px;\n\n\t/* Dimensions */\n\t--container-width: 448px;\n\t--submit-btn-height: 48px;\n\t--checkbox-size: 18px;\n\n\t/* Others */\n\t--box-shadow-card: 0px 4px 16px 0px var(--color-card-shadow);\n\t--opacity-placeholder: 0.5;\n}",
          "x-displayOptions": {
            "show": {
              "@version": [
                {
                  "_cnd": {
                    "gt": 2
                  }
                }
              ]
            }
          },
          "type": "string",
          "x-rows": 10,
          "x-editor": "cssEditor"
        }
      }
    }
  },
  "x-icon": "file:form.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "httpBasicAuth",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "basicAuth"
          ]
        }
      }
    }
  ],
  "x-webhooks": "true"
}
