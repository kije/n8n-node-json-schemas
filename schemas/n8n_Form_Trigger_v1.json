{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "n8n Form Trigger",
  "description": "Generate webforms in n8n and pass their responses to the workflow",
  "x-n8n-node-type": "formTrigger",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "path": {
      "x-title": "Form Path",
      "description": "The final segment of the form's URL, both for test and production",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "formTitle": {
      "x-title": "Form Title",
      "description": "Shown at the top of the form",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "formDescription": {
      "x-title": "Form Description",
      "description": "Shown underneath the Form Title. Can be used to prompt the user on how to complete the form. Accepts HTML. Does not accept <code>&lt;script&gt;</code>, <code>&lt;style&gt;</code> or <code>&lt;input&gt;</code> tags.",
      "default": "",
      "type": "string",
      "x-rows": 2
    },
    "formFields": {
      "x-title": "Form Elements",
      "default": {},
      "type": "object",
      "properties": {
        "values": {
          "x-title": "Values",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fieldName": {
                "x-title": "Custom Field Name",
                "description": "The name of the field, used in input attributes and referenced by the workflow",
                "default": "",
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "html"
                    ]
                  },
                  "show": {
                    "@version": [
                      {
                        "_cnd": {
                          "gte": 2.5
                        }
                      }
                    ]
                  }
                },
                "type": "string"
              },
              "fieldLabel": {
                "x-title": "Field Name",
                "description": "Label that appears above the input field",
                "default": "",
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "hiddenField",
                      "html"
                    ]
                  },
                  "show": {
                    "@version": [
                      {
                        "_cnd": {
                          "lt": 2.4
                        }
                      }
                    ]
                  }
                },
                "x-required": true,
                "type": "string"
              },
              "fieldType": {
                "x-title": "Element Type",
                "description": "The type of field to add to the form",
                "default": "text",
                "x-required": true,
                "type": "string",
                "enum": [
                  "checkbox",
                  "html",
                  "date",
                  "dropdown",
                  "email",
                  "file",
                  "hiddenField",
                  "number",
                  "password",
                  "radio",
                  "text",
                  "textarea"
                ],
                "x-enumNames": [
                  "Checkboxes",
                  "Custom HTML",
                  "Date",
                  "Dropdown",
                  "Email",
                  "File",
                  "Hidden Field",
                  "Number",
                  "Password",
                  "Radio Buttons",
                  "Text Input",
                  "Textarea"
                ]
              },
              "elementName": {
                "x-title": "Element Name",
                "description": "Optional field. It can be used to include the html in the output.",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "html"
                    ]
                  }
                },
                "type": "string"
              },
              "placeholder": {
                "x-title": "Placeholder",
                "description": "Sample text to display inside the field",
                "default": "",
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "dropdown",
                      "date",
                      "file",
                      "html",
                      "hiddenField",
                      "radio",
                      "checkbox"
                    ]
                  }
                },
                "type": "string"
              },
              "defaultValue": {
                "x-title": "Default Value",
                "description": "Default value(s) that will be pre-selected. Must match one or multiple of the option labels. Separate multiple pre-selected options with a comma.",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ]
                  }
                },
                "type": "string"
              },
              "fieldValue": {
                "x-title": "Field Value",
                "description": "Input value can be set here or will be passed as a query parameter via Field Name if no value is set",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "hiddenField"
                    ]
                  }
                },
                "type": "string"
              },
              "fieldOptions": {
                "x-title": "Radio Buttons",
                "default": {
                  "values": [
                    {
                      "option": ""
                    }
                  ]
                },
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "radio"
                    ]
                  }
                },
                "x-required": true,
                "type": "object",
                "properties": {
                  "values": {
                    "x-title": "Values",
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "option": {
                          "x-title": "Radio Button Label",
                          "default": "",
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "multiselect": {
                "x-title": "Multiple Choice",
                "description": "Whether to allow the user to select multiple options from the dropdown list",
                "default": false,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "dropdown"
                    ],
                    "@version": [
                      {
                        "_cnd": {
                          "lt": 2.3
                        }
                      }
                    ]
                  }
                },
                "type": "boolean"
              },
              "limitSelection": {
                "x-title": "Limit Selection",
                "default": "unlimited",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ]
                  }
                },
                "type": "string",
                "enum": [
                  "exact",
                  "range",
                  "unlimited"
                ],
                "x-enumNames": [
                  "Exact Number",
                  "Range",
                  "Unlimited"
                ]
              },
              "numberOfSelections": {
                "x-title": "Number of Selections",
                "default": 1,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ],
                    "limitSelection": [
                      "exact"
                    ]
                  }
                },
                "type": "number",
                "minimum": 1,
                "x-precision": 0
              },
              "minSelections": {
                "x-title": "Minimum Selections",
                "default": 0,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ],
                    "limitSelection": [
                      "range"
                    ]
                  }
                },
                "type": "number",
                "minimum": 0,
                "x-precision": 0
              },
              "maxSelections": {
                "x-title": "Maximum Selections",
                "default": 1,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "checkbox"
                    ],
                    "limitSelection": [
                      "range"
                    ]
                  }
                },
                "type": "number",
                "minimum": 1,
                "x-precision": 0
              },
              "html": {
                "x-title": "HTML",
                "description": "HTML elements to display on the form page",
                "default": "<!-- Your custom HTML here --->\n\n\n",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "html"
                    ]
                  }
                },
                "type": "string",
                "x-editor": "htmlEditor"
              },
              "multipleFiles": {
                "x-title": "Multiple Files",
                "description": "Whether to allow the user to select multiple files from the file input or just one",
                "default": true,
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "file"
                    ]
                  }
                },
                "type": "boolean"
              },
              "acceptFileTypes": {
                "x-title": "Accepted File Types",
                "description": "Comma-separated list of allowed file extensions",
                "default": "",
                "x-displayOptions": {
                  "show": {
                    "fieldType": [
                      "file"
                    ]
                  }
                },
                "type": "string"
              },
              "requiredField": {
                "x-title": "Required Field",
                "description": "Whether to require the user to enter a value for this field before submitting the form",
                "default": false,
                "x-displayOptions": {
                  "hide": {
                    "fieldType": [
                      "html",
                      "hiddenField"
                    ]
                  }
                },
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "responseMode": {
      "x-title": "Respond When",
      "description": "When to respond to the form submission",
      "default": "onReceived",
      "type": "string",
      "enum": [
        "onReceived",
        "lastNode",
        "responseNode"
      ],
      "x-enumNames": [
        "Form Is Submitted",
        "Workflow Finishes",
        "Using 'Respond to Webhook' Node"
      ],
      "x-enumDescriptions": [
        "As soon as this node receives the form submission",
        "When the last node of the workflow is executed",
        "When the 'Respond to Webhook' node is executed"
      ]
    },
    "options": {
      "x-title": "Options",
      "default": {},
      "x-displayOptions": {
        "hide": {
          "responseMode": [
            "responseNode"
          ]
        }
      },
      "type": "object",
      "properties": {
        "ipWhitelist": {
          "x-title": "IP(s) Allowlist",
          "description": "Comma-separated list of allowed IP addresses or CIDR ranges. Leave empty to allow all IPs.",
          "default": "",
          "type": "string"
        },
        "formSubmittedText": {
          "x-title": "Form Submitted Text",
          "description": "The text displayed to users after they filled the form",
          "default": "Your response has been recorded",
          "type": "string"
        }
      }
    }
  },
  "x-icon": "file:form.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-webhooks": "true"
}
