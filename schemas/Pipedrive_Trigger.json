{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipedrive Trigger",
  "description": "Starts the workflow when Pipedrive events occur",
  "x-n8n-node-type": "pipedriveTrigger",
  "x-n8n-version": [
    1,
    1.1
  ],
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "authentication": {
      "x-title": "Authentication",
      "default": "apiToken",
      "type": "string",
      "enum": [
        "apiToken",
        "oAuth2"
      ],
      "x-enumNames": [
        "API Token",
        "OAuth2"
      ]
    },
    "incomingAuthentication": {
      "x-title": "Incoming Authentication",
      "description": "If authentication should be activated for the webhook (makes it more secure)",
      "default": "none",
      "type": "string",
      "enum": [
        "basicAuth",
        "none"
      ],
      "x-enumNames": [
        "Basic Auth",
        "None"
      ]
    },
    "action": {
      "x-title": "Action",
      "description": "Type of action to receive notifications about",
      "default": "*",
      "x-displayOptions": {
        "hide": {
          "@version": [
            {
              "_cnd": {
                "lte": 1
              }
            }
          ]
        }
      },
      "type": "string",
      "enum": [
        "*",
        "create",
        "delete",
        "change"
      ],
      "x-enumNames": [
        "All",
        "Create",
        "Delete",
        "Change"
      ],
      "x-enumDescriptions": [
        "Any change",
        "Data got added",
        "Data got deleted",
        "Data got changed"
      ]
    },
    "entity": {
      "x-title": "Entity",
      "description": "Type of object to receive notifications about",
      "default": "*",
      "x-displayOptions": {
        "hide": {
          "@version": [
            {
              "_cnd": {
                "lte": 1
              }
            }
          ]
        }
      },
      "type": "string",
      "enum": [
        "activity",
        "activityType",
        "*",
        "deal",
        "note",
        "organization",
        "person",
        "pipeline",
        "product",
        "stage",
        "user"
      ],
      "x-enumNames": [
        "Activity",
        "Activity Type",
        "All",
        "Deal",
        "Note",
        "Organization",
        "Person",
        "Pipeline",
        "Product",
        "Stage",
        "User"
      ]
    },
    "object": {
      "x-title": "Object",
      "description": "Type of object to receive notifications about",
      "default": "*",
      "x-displayOptions": {
        "hide": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.1
              }
            }
          ]
        }
      },
      "type": "string",
      "enum": [
        "activity",
        "activityType",
        "*",
        "deal",
        "note",
        "organization",
        "person",
        "pipeline",
        "product",
        "stage",
        "user"
      ],
      "x-enumNames": [
        "Activity",
        "Activity Type",
        "All",
        "Deal",
        "Note",
        "Organization",
        "Person",
        "Pipeline",
        "Product",
        "Stage",
        "User"
      ]
    }
  },
  "x-icon": "file:pipedrive.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "pipedriveApi",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "apiToken"
          ]
        }
      }
    },
    {
      "name": "pipedriveOAuth2Api",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "oAuth2"
          ]
        }
      }
    },
    {
      "name": "httpBasicAuth",
      "required": true,
      "displayOptions": {
        "show": {
          "incomingAuthentication": [
            "basicAuth"
          ]
        }
      }
    }
  ],
  "x-webhooks": "true"
}
