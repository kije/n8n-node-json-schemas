{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Anthropic Chat Model",
  "description": "Language Model Anthropic",
  "x-n8n-node-type": "lmChatAnthropic",
  "x-n8n-version": [
    1,
    1.1,
    1.2,
    1.3
  ],
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "model": {
      "x-title": "Model",
      "description": "The model. Choose from the list, or specify an ID. <a href=\"https://docs.anthropic.com/claude/docs/models-overview\">Learn more</a>.",
      "default": {
        "mode": "list",
        "value": "claude-sonnet-4-5-20250929",
        "cachedResultName": "Claude Sonnet 4.5"
      },
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.3
              }
            }
          ]
        }
      },
      "x-required": true,
      "type": "object",
      "properties": {
        "__rl": {
          "type": "boolean",
          "const": true
        },
        "mode": {
          "type": "string",
          "enum": [
            "list",
            "id"
          ]
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "mode",
        "value"
      ],
      "x-modes": [
        {
          "name": "list",
          "displayName": "From List",
          "type": "list"
        },
        {
          "name": "id",
          "displayName": "ID",
          "type": "string"
        }
      ]
    },
    "options": {
      "x-title": "Options",
      "description": "Additional options to add",
      "default": {},
      "type": "object",
      "properties": {
        "maxTokensToSample": {
          "x-title": "Maximum Number of Tokens",
          "description": "The maximum number of tokens to generate in the completion",
          "default": 4096,
          "type": "number"
        },
        "temperature": {
          "x-title": "Sampling Temperature",
          "description": "Controls randomness: Lowering results in less random completions. As the temperature approaches zero, the model will become deterministic and repetitive.",
          "default": 0.7,
          "x-displayOptions": {
            "hide": {
              "thinking": [
                true
              ]
            }
          },
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "x-precision": 1
        },
        "topK": {
          "x-title": "Top K",
          "description": "Used to remove \"long tail\" low probability responses. Defaults to -1, which disables it.",
          "default": -1,
          "x-displayOptions": {
            "hide": {
              "thinking": [
                true
              ]
            }
          },
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "x-precision": 1
        },
        "topP": {
          "x-title": "Top P",
          "description": "Controls diversity via nucleus sampling: 0.5 means half of all likelihood-weighted options are considered. We generally recommend altering this or temperature but not both.",
          "default": 1,
          "x-displayOptions": {
            "hide": {
              "thinking": [
                true
              ]
            }
          },
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "x-precision": 1
        },
        "thinking": {
          "x-title": "Enable Thinking",
          "description": "Whether to enable thinking mode for the model",
          "default": false,
          "type": "boolean"
        },
        "thinkingBudget": {
          "x-title": "Thinking Budget (Tokens)",
          "description": "The maximum number of tokens to use for thinking",
          "default": 1024,
          "x-displayOptions": {
            "show": {
              "thinking": [
                true
              ]
            }
          },
          "type": "number"
        }
      }
    }
  },
  "x-icon": "file:anthropic.svg",
  "x-inputs": [],
  "x-outputs": [
    "ai_languageModel"
  ],
  "x-credentials": [
    {
      "name": "anthropicApi",
      "required": true
    }
  ]
}
