{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JWT",
  "description": "JWT",
  "x-n8n-node-type": "jwt",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "operation": {
      "x-title": "Operation",
      "default": "sign",
      "type": "string",
      "enum": [
        "decode",
        "sign",
        "verify"
      ],
      "x-enumNames": [
        "Decode",
        "Sign",
        "Verify"
      ]
    },
    "useJson": {
      "x-title": "Use JSON to Build Payload",
      "description": "Whether to use JSON to build the claims",
      "default": false,
      "x-displayOptions": {
        "show": {
          "operation": [
            "sign"
          ]
        }
      },
      "type": "boolean"
    },
    "claims": {
      "x-title": "Payload Claims",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "sign"
          ],
          "useJson": [
            false
          ]
        }
      },
      "type": "object",
      "properties": {
        "audience": {
          "x-title": "Audience",
          "description": "Identifies the recipients that the JWT is intended for",
          "default": "",
          "type": "string"
        },
        "expiresIn": {
          "x-title": "Expires In",
          "description": "The lifetime of the token in seconds",
          "default": 3600,
          "type": "number",
          "minimum": 0
        },
        "issuer": {
          "x-title": "Issuer",
          "description": "Identifies the principal that issued the JWT",
          "default": "",
          "type": "string"
        },
        "jwtid": {
          "x-title": "JWT ID",
          "description": "Unique identifier for the JWT",
          "default": "",
          "type": "string"
        },
        "notBefore": {
          "x-title": "Not Before",
          "description": "The time before which the JWT must not be accepted for processing",
          "default": 0,
          "type": "number",
          "minimum": 0
        },
        "subject": {
          "x-title": "Subject",
          "description": "Identifies the principal that is the subject of the JWT",
          "default": "",
          "type": "string"
        }
      }
    },
    "claimsJson": {
      "x-title": "Payload Claims (JSON)",
      "description": "Claims to add to the token in JSON format",
      "default": "{\n  \"my_field_1\": \"value 1\",\n  \"my_field_2\": \"value 2\"\n}\n",
      "x-displayOptions": {
        "show": {
          "operation": [
            "sign"
          ],
          "useJson": [
            true
          ]
        }
      },
      "oneOf": [
        {
          "type": "string",
          "description": "JSON string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "token": {
      "x-title": "Token",
      "description": "The token to verify or decode",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "verify",
            "decode"
          ]
        }
      },
      "x-required": true,
      "type": "string",
      "format": "password"
    },
    "options": {
      "x-title": "Options",
      "default": {},
      "type": "object",
      "properties": {
        "complete": {
          "x-title": "Return Additional Info",
          "description": "Whether to return the complete decoded token with information about the header and signature or just the payload",
          "default": false,
          "x-displayOptions": {
            "show": {
              "/operation": [
                "verify",
                "decode"
              ]
            }
          },
          "type": "boolean"
        },
        "ignoreExpiration": {
          "x-title": "Ignore Expiration",
          "description": "Whether to ignore the expiration of the token",
          "default": false,
          "x-displayOptions": {
            "show": {
              "/operation": [
                "verify"
              ]
            }
          },
          "type": "boolean"
        },
        "ignoreNotBefore": {
          "x-title": "Ignore Not Before Claim",
          "description": "Whether to ignore the not before claim of the token",
          "default": false,
          "x-displayOptions": {
            "show": {
              "/operation": [
                "verify"
              ]
            }
          },
          "type": "boolean"
        },
        "clockTolerance": {
          "x-title": "Clock Tolerance",
          "description": "Number of seconds to tolerate when checking the nbf and exp claims, to deal with small clock differences among different servers",
          "default": 0,
          "x-displayOptions": {
            "show": {
              "/operation": [
                "verify"
              ]
            }
          },
          "type": "number",
          "minimum": 0
        },
        "kid": {
          "x-title": "Key ID",
          "description": "The kid (key ID) claim is an optional header claim, used to specify the key for validating the signature",
          "default": "",
          "x-displayOptions": {
            "show": {
              "/operation": [
                "sign"
              ]
            }
          },
          "type": "string"
        },
        "algorithm": {
          "x-title": "Override Algorithm",
          "description": "The algorithm to use for signing or verifying the token, overrides algorithm in credentials",
          "default": "HS256",
          "x-displayOptions": {
            "show": {
              "/operation": [
                "sign",
                "verify"
              ]
            }
          },
          "type": "string",
          "enum": [
            "ES256",
            "ES384",
            "ES512",
            "HS256",
            "HS384",
            "HS512",
            "PS256",
            "PS384",
            "PS512",
            "RS256",
            "RS384",
            "RS512"
          ],
          "x-enumNames": [
            "ES256",
            "ES384",
            "ES512",
            "HS256",
            "HS384",
            "HS512",
            "PS256",
            "PS384",
            "PS512",
            "RS256",
            "RS384",
            "RS512"
          ]
        }
      }
    }
  },
  "x-subtitle": "={{((operation) => {\n    if (operation === 'sign') {\n        return 'Sign a JWT';\n    }\n    if (operation === 'decode') {\n        return 'Decode a JWT';\n    }\n    if (operation === 'verify') {\n        return 'Verify a JWT';\n    }\n    return operation;\n})($parameter.operation)}}",
  "x-icon": "file:jwt.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "jwtAuth",
      "required": true
    }
  ]
}
