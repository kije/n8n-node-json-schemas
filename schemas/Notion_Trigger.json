{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notion Trigger",
  "description": "Starts the workflow when Notion events occur",
  "x-n8n-node-type": "notionTrigger",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "event": {
      "x-title": "Event",
      "default": "pageAddedToDatabase",
      "x-required": true,
      "type": "string",
      "enum": [
        "pageAddedToDatabase",
        "pagedUpdatedInDatabase"
      ],
      "x-enumNames": [
        "Page Added to Database",
        "Page Updated in Database"
      ]
    },
    "databaseId": {
      "x-title": "Database",
      "description": "The Notion Database to operate on",
      "default": {
        "mode": "list",
        "value": ""
      },
      "x-displayOptions": {
        "show": {
          "event": [
            "pageAddedToDatabase",
            "pagedUpdatedInDatabase"
          ]
        }
      },
      "x-required": true,
      "type": "object",
      "properties": {
        "__rl": {
          "type": "boolean",
          "const": true
        },
        "mode": {
          "type": "string",
          "enum": [
            "list",
            "url",
            "id"
          ]
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "mode",
        "value"
      ],
      "x-modes": [
        {
          "name": "list",
          "displayName": "Database",
          "type": "list"
        },
        {
          "name": "url",
          "displayName": "Link",
          "type": "string"
        },
        {
          "name": "id",
          "displayName": "ID",
          "type": "string"
        }
      ]
    },
    "simple": {
      "x-title": "Simplify",
      "description": "Whether to return a simplified version of the response instead of the raw data",
      "default": true,
      "x-displayOptions": {
        "show": {
          "event": [
            "pageAddedToDatabase",
            "pagedUpdatedInDatabase"
          ]
        }
      },
      "type": "boolean"
    }
  },
  "x-subtitle": "={{$parameter[\"event\"]}}",
  "x-icon": {
    "light": "file:notion.svg",
    "dark": "file:notion.dark.svg"
  },
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "notionApi",
      "required": true
    }
  ]
}
