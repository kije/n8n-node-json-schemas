{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Emelia Trigger",
  "description": "Handle Emelia campaign activity events via webhooks",
  "x-n8n-node-type": "emeliaTrigger",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "campaignId": {
      "x-title": "Campaign Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "events": {
      "x-title": "Events",
      "default": [],
      "x-required": true,
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "bounced",
          "opened",
          "replied",
          "sent",
          "clicked",
          "unsubscribed"
        ]
      },
      "x-enumNames": [
        "Email Bounced",
        "Email Opened",
        "Email Replied",
        "Email Sent",
        "Link Clicked",
        "Unsubscribed Contact"
      ]
    }
  },
  "x-subtitle": "={{$parameter[\"operation\"] + \": \" + $parameter[\"resource\"]}}",
  "x-icon": "file:emelia.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "emeliaApi",
      "required": true,
      "testedBy": "emeliaApiTest"
    }
  ],
  "x-webhooks": "true"
}
