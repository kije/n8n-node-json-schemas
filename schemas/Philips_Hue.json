{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Philips Hue",
  "description": "Consume Philips Hue API",
  "x-n8n-node-type": "philipsHue",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "input"
  ],
  "type": "object",
  "properties": {
    "resource": {
      "x-title": "Resource",
      "default": "light",
      "type": "string",
      "enum": [
        "light"
      ],
      "x-enumNames": [
        "Light"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "update",
      "x-displayOptions": {
        "show": {
          "resource": [
            "light"
          ]
        }
      },
      "type": "string",
      "enum": [
        "delete",
        "get",
        "getAll",
        "update"
      ],
      "x-enumNames": [
        "Delete",
        "Get",
        "Get Many",
        "Update"
      ],
      "x-enumDescriptions": [
        "Delete a light",
        "Retrieve a light",
        "Retrieve many lights",
        "Update a light"
      ]
    },
    "lightId": {
      "x-title": "Light Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ],
          "resource": [
            "light"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "returnAll": {
      "x-title": "Return All",
      "description": "Whether to return all results or only up to a given limit",
      "default": false,
      "x-displayOptions": {
        "show": {
          "operation": [
            "getAll"
          ],
          "resource": [
            "light"
          ]
        }
      },
      "type": "boolean"
    },
    "limit": {
      "x-title": "Limit",
      "description": "Max number of results to return",
      "default": 100,
      "x-displayOptions": {
        "show": {
          "operation": [
            "getAll"
          ],
          "resource": [
            "light"
          ],
          "returnAll": [
            false
          ]
        }
      },
      "type": "number",
      "minimum": 1,
      "maximum": 500
    },
    "on": {
      "x-title": "On",
      "description": "On/Off state of the light",
      "default": true,
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ],
          "resource": [
            "light"
          ]
        }
      },
      "x-required": true,
      "type": "boolean"
    },
    "additionalFields": {
      "x-title": "Additional Fields",
      "default": {},
      "x-displayOptions": {
        "show": {
          "resource": [
            "light"
          ],
          "operation": [
            "update"
          ]
        }
      },
      "type": "object",
      "properties": {
        "alert": {
          "x-title": "Alert Effect",
          "description": "The alert effect, is a temporary change to the bulb’s state",
          "default": "",
          "type": "string",
          "enum": [
            "none",
            "select",
            "lselect"
          ],
          "x-enumNames": [
            "None",
            "Select",
            "LSelect"
          ],
          "x-enumDescriptions": [
            "The light is not performing an alert effect",
            "The light is performing one breathe cycle",
            "The light is performing breathe cycles for 15 seconds or until an \"alert\": \"none\" command is received"
          ]
        },
        "bri": {
          "x-title": "Brightness",
          "description": "The brightness value to set the light to. Brightness is a scale from 1 (the minimum the light is capable of) to 254 (the maximum).",
          "default": 100,
          "type": "number",
          "minimum": 1,
          "maximum": 254
        },
        "bri_inc": {
          "x-title": "Brightness Increments",
          "description": "Increments or decrements the value of the brightness. This value is ignored if the Brightness attribute is provided.",
          "default": 0,
          "type": "number",
          "minimum": -254,
          "maximum": 254
        },
        "ct": {
          "x-title": "Color Temperature",
          "description": "The Mired color temperature of the light. 2012 connected lights are capable of 153 (6500K) to 500 (2000K).",
          "default": 0,
          "type": "number"
        },
        "ct_inc": {
          "x-title": "Color Temperature Increments",
          "description": "Increments or decrements the value of the ct. ct_inc is ignored if the ct attribute is provided.",
          "default": 0,
          "type": "number",
          "minimum": -65534,
          "maximum": 65534
        },
        "xy": {
          "x-title": "Coordinates",
          "description": "The x and y coordinates of a color in CIE color space. The first entry is the x coordinate and the second entry is the y coordinate. Both x and y are between 0 and 1",
          "default": "",
          "type": "string"
        },
        "xy_inc": {
          "x-title": "Coordinates Increments",
          "description": "Increments or decrements the value of the xy. This value is ignored if the Coordinates attribute is provided. Any ongoing color transition is stopped. Max value [0.5, 0.5]",
          "default": "",
          "type": "string"
        },
        "effect": {
          "x-title": "Dynamic Effect",
          "description": "The dynamic effect of the light",
          "default": "",
          "type": "string",
          "enum": [
            "none",
            "colorloop"
          ],
          "x-enumNames": [
            "None",
            "Color Loop"
          ]
        },
        "hue": {
          "x-title": "Hue",
          "description": "The hue value to set light to.The hue value is a wrapping value between 0 and 65535. Both 0 and 65535 are red, 25500 is green and 46920 is blue.",
          "default": 0,
          "type": "number",
          "minimum": 0,
          "maximum": 65535
        },
        "hue_inc": {
          "x-title": "Hue Increments",
          "description": "Increments or decrements the value of the hue. Hue Increments is ignored if the Hue attribute is provided.",
          "default": 0,
          "type": "number",
          "minimum": -65534,
          "maximum": 65534
        },
        "sat": {
          "x-title": "Saturation",
          "description": "Saturation of the light. 254 is the most saturated (colored) and 0 is the least saturated (white).",
          "default": 0,
          "type": "number",
          "minimum": 0,
          "maximum": 254
        },
        "sat_inc": {
          "x-title": "Saturation Increments",
          "description": "Increments or decrements the value of the sat. This value is ignored if the Saturation attribute is provided.",
          "default": 0,
          "type": "number",
          "minimum": -254,
          "maximum": 254
        },
        "transitiontime": {
          "x-title": "Transition Time",
          "description": "The duration in seconds of the transition from the light’s current state to the new state",
          "default": 4,
          "type": "number"
        }
      }
    }
  },
  "x-subtitle": "={{$parameter[\"operation\"] + \": \" + $parameter[\"resource\"]}}",
  "x-icon": "file:philipshue.png",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "philipsHueOAuth2Api",
      "required": true
    }
  ]
}
