{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Execute Workflow Trigger",
  "description": "Helpers for calling other n8n workflows. Used for designing modular, microservice-like workflows.",
  "x-n8n-node-type": "executeWorkflowTrigger",
  "x-n8n-version": [
    1,
    1.1
  ],
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "events": {
      "x-title": "Events",
      "default": "worklfow_call",
      "type": "string"
    },
    "inputSource": {
      "x-title": "Input data mode",
      "default": "workflowInputs",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.1
              }
            }
          ]
        }
      },
      "type": "string",
      "enum": [
        "workflowInputs",
        "jsonExample",
        "passthrough"
      ],
      "x-enumNames": [
        "Define using fields below",
        "Define using JSON example",
        "Accept all data"
      ],
      "x-enumDescriptions": [
        "Provide input fields via UI",
        "Generate a schema from an example JSON object",
        "Use all incoming data from the parent workflow"
      ]
    },
    "jsonExample": {
      "x-title": "JSON Example",
      "default": "{\n  \"aField\": \"a string\",\n  \"aNumber\": 123,\n  \"thisFieldAcceptsAnyType\": null,\n  \"anArray\": []\n}",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.1
              }
            }
          ],
          "inputSource": [
            "jsonExample"
          ]
        }
      },
      "oneOf": [
        {
          "type": "string",
          "description": "JSON string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "workflowInputs": {
      "x-title": "Workflow Input Schema",
      "description": "Define expected input fields. If no inputs are provided, all data from the calling workflow will be passed through.",
      "default": {},
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.1
              }
            }
          ],
          "inputSource": [
            "workflowInputs"
          ]
        }
      },
      "type": "object",
      "properties": {
        "values": {
          "x-title": "Values",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "x-title": "Name",
                "description": "A unique name for this workflow input, used to reference it from another workflows",
                "default": "",
                "x-required": true,
                "type": "string"
              },
              "type": {
                "x-title": "Type",
                "description": "Expected data type for this input value. Determines how this field's values are stored, validated, and displayed.",
                "default": "string",
                "x-required": true,
                "type": "string",
                "enum": [
                  "any",
                  "string",
                  "number",
                  "boolean",
                  "array",
                  "object"
                ],
                "x-enumNames": [
                  "Allow Any Type",
                  "String",
                  "Number",
                  "Boolean",
                  "Array",
                  "Object"
                ]
              }
            }
          }
        }
      }
    }
  },
  "x-icon": "fa:sign-out-alt",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ]
}
