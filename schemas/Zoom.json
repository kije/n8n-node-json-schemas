{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zoom",
  "description": "Consume Zoom API",
  "x-n8n-node-type": "zoom",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "input"
  ],
  "type": "object",
  "properties": {
    "authentication": {
      "x-title": "Authentication",
      "default": "accessToken",
      "type": "string",
      "enum": [
        "accessToken",
        "oAuth2"
      ],
      "x-enumNames": [
        "Access Token",
        "OAuth2"
      ]
    },
    "resource": {
      "x-title": "Resource",
      "default": "meeting",
      "type": "string",
      "enum": [
        "meeting"
      ],
      "x-enumNames": [
        "Meeting"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "create",
      "x-displayOptions": {
        "show": {
          "resource": [
            "meeting"
          ]
        }
      },
      "type": "string",
      "enum": [
        "create",
        "delete",
        "get",
        "getAll",
        "update"
      ],
      "x-enumNames": [
        "Create",
        "Delete",
        "Get",
        "Get Many",
        "Update"
      ],
      "x-enumDescriptions": [
        "Create a meeting",
        "Delete a meeting",
        "Retrieve a meeting",
        "Retrieve many meetings",
        "Update a meeting"
      ]
    },
    "topic": {
      "x-title": "Topic",
      "description": "Topic of the meeting",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "create"
          ],
          "resource": [
            "meeting"
          ]
        }
      },
      "type": "string"
    },
    "additionalFields": {
      "x-title": "Additional Fields",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "delete"
          ],
          "resource": [
            "meeting"
          ]
        }
      },
      "type": "object",
      "properties": {
        "occurrenceId": {
          "x-title": "Occurrence ID",
          "description": "Meeting occurrence ID",
          "default": "",
          "type": "string"
        },
        "scheduleForReminder": {
          "x-title": "Schedule Reminder",
          "description": "Whether to notify hosts and alternative hosts about meeting cancellation via email",
          "default": false,
          "type": "boolean"
        }
      }
    },
    "meetingId": {
      "x-title": "ID",
      "description": "Meeting ID",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ],
          "resource": [
            "meeting"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "returnAll": {
      "x-title": "Return All",
      "description": "Whether to return all results or only up to a given limit",
      "default": false,
      "x-displayOptions": {
        "show": {
          "operation": [
            "getAll"
          ],
          "resource": [
            "meeting"
          ]
        }
      },
      "type": "boolean"
    },
    "limit": {
      "x-title": "Limit",
      "description": "Max number of results to return",
      "default": 30,
      "x-displayOptions": {
        "show": {
          "operation": [
            "getAll"
          ],
          "resource": [
            "meeting"
          ],
          "returnAll": [
            false
          ]
        }
      },
      "type": "number",
      "minimum": 1,
      "maximum": 300
    },
    "filters": {
      "x-title": "Filters",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "getAll"
          ],
          "resource": [
            "meeting"
          ]
        }
      },
      "type": "object",
      "properties": {
        "type": {
          "x-title": "Type",
          "description": "Meeting type",
          "default": "live",
          "type": "string",
          "enum": [
            "scheduled",
            "live",
            "upcoming"
          ],
          "x-enumNames": [
            "Scheduled",
            "Live",
            "Upcoming"
          ],
          "x-enumDescriptions": [
            "This includes all valid past meetings, live meetings and upcoming scheduled meetings",
            "All ongoing meetings",
            "All upcoming meetings including live meetings"
          ]
        }
      }
    },
    "updateFields": {
      "x-title": "Update Fields",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ],
          "resource": [
            "meeting"
          ]
        }
      },
      "type": "object",
      "properties": {
        "agenda": {
          "x-title": "Agenda",
          "description": "Meeting agenda",
          "default": "",
          "type": "string"
        },
        "duration": {
          "x-title": "Duration",
          "description": "Meeting duration (minutes)",
          "default": 0,
          "type": "number",
          "minimum": 0
        },
        "password": {
          "x-title": "Password",
          "description": "Password to join the meeting with maximum 10 characters",
          "default": "",
          "type": "string",
          "format": "password"
        },
        "scheduleFor": {
          "x-title": "Schedule For",
          "description": "Schedule meeting for someone else from your account, provide their email ID",
          "default": "",
          "type": "string"
        },
        "settings": {
          "x-title": "Settings",
          "default": {},
          "type": "object",
          "properties": {
            "audio": {
              "x-title": "Audio",
              "description": "Determine how participants can join audio portion of the meeting",
              "default": "both",
              "type": "string",
              "enum": [
                "both",
                "telephony",
                "voip"
              ],
              "x-enumNames": [
                "Both Telephony and VoiP",
                "Telephony",
                "VOIP"
              ]
            },
            "alternativeHosts": {
              "x-title": "Alternative Hosts",
              "description": "Alternative hosts email IDs",
              "default": "",
              "type": "string"
            },
            "autoRecording": {
              "x-title": "Auto Recording",
              "default": "none",
              "type": "string",
              "enum": [
                "local",
                "cloud",
                "none"
              ],
              "x-enumNames": [
                "Record on Local",
                "Record on Cloud",
                "Disabled"
              ]
            },
            "cnMeeting": {
              "x-title": "Host Meeting in China",
              "default": false,
              "type": "boolean"
            },
            "inMeeting": {
              "x-title": "Host Meeting in India",
              "default": false,
              "type": "boolean"
            },
            "hostVideo": {
              "x-title": "Host Video",
              "description": "Whether to start a video when host joins the meeting",
              "default": false,
              "type": "boolean"
            },
            "joinBeforeHost": {
              "x-title": "Join Before Host",
              "description": "Whether to allow participants to join the meeting before host starts it",
              "default": false,
              "type": "boolean"
            },
            "muteUponEntry": {
              "x-title": "Muting Upon Entry",
              "description": "Whether to mute participants upon entry",
              "default": false,
              "type": "boolean"
            },
            "participantVideo": {
              "x-title": "Participant Video",
              "description": "Whether to start a video when participant joins the meeting",
              "default": false,
              "type": "boolean"
            },
            "registrationType": {
              "x-title": "Registration Type",
              "description": "Registration type. Used for recurring meetings with fixed time only.",
              "default": 1,
              "type": "string",
              "enum": [
                1,
                2,
                3
              ],
              "x-enumNames": [
                "Attendees Register Once and Can Attend Any of the Occurrences",
                "Attendees Need to Register for Every Occurrence",
                "Attendees Register Once and Can Choose One or More Occurrences to Attend"
              ]
            },
            "watermark": {
              "x-title": "Watermark",
              "description": "Whether to add watermark when viewing a shared screen",
              "default": false,
              "type": "boolean"
            }
          }
        },
        "startTime": {
          "x-title": "Start Time",
          "description": "Start time should be used only for scheduled or recurring meetings with fixed time",
          "default": "",
          "type": "string",
          "format": "date-time"
        },
        "timeZone": {
          "x-title": "Timezone Name or ID",
          "description": "Time zone used in the response. The default is the time zone of the calendar. Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>.",
          "default": "",
          "type": "string"
        },
        "topic": {
          "x-title": "Topic",
          "description": "Meeting topic",
          "default": "",
          "type": "string"
        },
        "type": {
          "x-title": "Type",
          "description": "Meeting type",
          "default": 2,
          "type": "string",
          "enum": [
            1,
            2,
            3,
            8
          ],
          "x-enumNames": [
            "Instant Meeting",
            "Scheduled Meeting",
            "Recurring Meeting with No Fixed Time",
            "Recurring Meeting with Fixed Time"
          ]
        }
      }
    }
  },
  "x-subtitle": "={{$parameter[\"operation\"] + \": \" + $parameter[\"resource\"]}}",
  "x-icon": "file:zoom.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "zoomApi",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "accessToken"
          ]
        }
      }
    },
    {
      "name": "zoomOAuth2Api",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "oAuth2"
          ]
        }
      }
    }
  ]
}
