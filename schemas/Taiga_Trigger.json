{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Taiga Trigger",
  "description": "Handle Taiga events via webhook",
  "x-n8n-node-type": "taigaTrigger",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "projectId": {
      "x-title": "Project Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "resources": {
      "x-title": "Resources",
      "description": "Resources to listen to",
      "default": [
        "all"
      ],
      "x-required": true,
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "all",
          "issue",
          "milestone",
          "task",
          "userstory",
          "wikipage"
        ]
      },
      "x-enumNames": [
        "All",
        "Issue",
        "Milestone (Sprint)",
        "Task",
        "User Story",
        "Wikipage"
      ]
    },
    "operations": {
      "x-title": "Operations",
      "description": "Operations to listen to",
      "default": [
        "all"
      ],
      "x-required": true,
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "all",
          "create",
          "delete",
          "change"
        ]
      },
      "x-enumNames": [
        "All",
        "Create",
        "Delete",
        "Update"
      ]
    }
  },
  "x-subtitle": "={{\"project:\" + $parameter[\"projectSlug\"]}}",
  "x-icon": "file:taiga.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "taigaApi",
      "required": true
    }
  ],
  "x-webhooks": "true"
}
