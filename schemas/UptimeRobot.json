        "sort": {
          "x-title": "Sort",
          "description": "The sorting of the status page",
          "default": "",
          "type": "string",
          "enum": [
            1,
            2,
            3,
            4
          ],
          "x-enumNames": [
            "Friendly Name (A-Z)",
            "Friendly Name (Z-A)",
            "Status (Up-Down-Paused)",
            "Status (Down-Up-Paused)"
          ]
        }
      }
