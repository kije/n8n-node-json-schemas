{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UptimeRobot",
  "description": "Consume UptimeRobot API",
  "x-n8n-node-type": "uptimeRobot",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "output"
  ],
  "type": "object",
  "properties": {
    "resource": {
      "x-title": "Resource",
      "default": "account",
      "type": "string",
      "enum": [
        "account",
        "alertContact",
        "maintenanceWindow",
        "monitor",
        "publicStatusPage"
      ],
      "x-enumNames": [
        "Account",
        "Alert Contact",
        "Maintenance Window",
        "Monitor",
        "Public Status Page"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "getAll",
      "x-displayOptions": {
        "show": {
          "resource": [
            "publicStatusPage"
          ]
        }
      },
      "type": "string",
      "enum": [
        "create",
        "delete",
        "get",
        "getAll"
      ],
      "x-enumNames": [
        "Create",
        "Delete",
        "Get",
        "Get Many"
      ],
      "x-enumDescriptions": [
        "Create a public status page",
