    "start_time": {
      "x-title": "Start Time",
      "description": "The maintenance window start datetime",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "maintenanceWindow"
          ],
          "operation": [
            "create"
          ]
        }
      },
      "x-required": true,
      "type": "string",
