      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "alertContact"
          ],
          "operation": [
            "create"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "duration": {
      "x-title": "Duration (Minutes)",
