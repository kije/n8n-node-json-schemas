{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Airtable",
  "description": "Read, update, write and delete data from Airtable",
  "x-n8n-node-type": "airtable",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "input"
  ],
  "type": "object",
  "properties": {
    "authentication": {
      "x-title": "Authentication",
      "default": "airtableApi",
      "type": "string",
      "enum": [
        "airtableTokenApi",
        "airtableOAuth2Api",
        "airtableApi"
      ],
      "x-enumNames": [
        "Access Token",
        "OAuth2",
        "API Key (Deprecated)"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "read",
      "type": "string",
      "enum": [
        "append",
        "delete",
        "list",
        "read",
        "update"
      ],
      "x-enumNames": [
        "Append",
        "Delete",
        "List",
        "Read",
        "Update"
      ],
      "x-enumDescriptions": [
        "Append the data to a table",
        "Delete data from a table",
        "List data from a table",
        "Read data from a table",
        "Update data in a table"
      ]
    },
    "application": {
      "x-title": "Base",
      "description": "The Airtable Base in which to operate on",
      "default": {
        "mode": "url",
        "value": ""
      },
      "x-required": true,
      "type": "object",
      "properties": {
        "__rl": {
          "type": "boolean",
          "const": true
        },
        "mode": {
          "type": "string",
          "enum": [
            "url",
            "id"
          ]
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "mode",
        "value"
      ],
      "x-modes": [
        {
          "name": "url",
          "displayName": "By URL",
          "type": "string"
        },
        {
          "name": "id",
          "displayName": "ID",
          "type": "string"
        }
      ]
    },
    "table": {
      "x-title": "Table",
      "default": {
        "mode": "url",
        "value": ""
      },
      "x-required": true,
      "type": "object",
      "properties": {
        "__rl": {
          "type": "boolean",
          "const": true
        },
        "mode": {
          "type": "string",
          "enum": [
            "url",
            "id"
          ]
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "mode",
        "value"
      ],
      "x-modes": [
        {
          "name": "url",
          "displayName": "By URL",
          "type": "string"
        },
        {
          "name": "id",
          "displayName": "ID",
          "type": "string"
        }
      ]
    },
    "addAllFields": {
      "x-title": "Add All Fields",
      "description": "Whether all fields should be sent to Airtable or only specific ones",
      "default": true,
      "x-displayOptions": {
        "show": {
          "operation": [
            "append"
          ]
        }
      },
      "type": "boolean"
    },
    "fields": {
      "x-title": "Fields",
      "description": "The name of fields for which data should be sent to Airtable",
      "default": [],
      "x-displayOptions": {
        "show": {
          "updateAllFields": [
            false
          ],
          "operation": [
            "update"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "id": {
      "x-title": "ID",
      "description": "ID of the record to update",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "returnAll": {
      "x-title": "Return All",
      "description": "Whether to return all results or only up to a given limit",
      "default": true,
      "x-displayOptions": {
        "show": {
          "operation": [
            "list"
          ]
        }
      },
      "type": "boolean"
    },
    "limit": {
      "x-title": "Limit",
      "description": "Max number of results to return",
      "default": 100,
      "x-displayOptions": {
        "show": {
          "operation": [
            "list"
          ],
          "returnAll": [
            false
          ]
        }
      },
      "type": "number",
      "minimum": 1,
      "maximum": 100
    },
    "downloadAttachments": {
      "x-title": "Download Attachments",
      "description": "Whether the attachment fields define in 'Download Fields' will be downloaded",
      "default": false,
      "x-displayOptions": {
        "show": {
          "operation": [
            "list"
          ]
        }
      },
      "type": "boolean"
    },
    "downloadFieldNames": {
      "x-title": "Download Fields",
      "description": "Name of the fields of type 'attachment' that should be downloaded. Multiple ones can be defined separated by comma. Case sensitive and cannot include spaces after a comma.",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "list"
          ],
          "downloadAttachments": [
            true
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "additionalOptions": {
      "x-title": "Additional Options",
      "description": "Additional options which decide which records should be returned",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "list"
          ]
        }
      },
      "type": "object",
      "properties": {
        "fields": {
          "x-title": "Fields",
          "description": "Only data for fields whose names are in this list will be included in the records",
          "default": [],
          "type": "string"
        },
        "filterByFormula": {
          "x-title": "Filter By Formula",
          "description": "A formula used to filter records. The formula will be evaluated for each record, and if the result is not 0, false, \"\", NaN, [], or #Error! the record will be included in the response.",
          "default": "",
          "type": "string"
        },
        "sort": {
          "x-title": "Sort",
          "description": "Defines how the returned records should be ordered",
          "default": {},
          "type": "object",
          "properties": {
            "property": {
              "x-title": "Property",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "field": {
                    "x-title": "Field",
                    "description": "Name of the field to sort on",
                    "default": "",
                    "type": "string"
                  },
                  "direction": {
                    "x-title": "Direction",
                    "description": "The sort direction",
                    "default": "asc",
                    "type": "string",
                    "enum": [
                      "asc",
                      "desc"
                    ],
                    "x-enumNames": [
                      "ASC",
                      "DESC"
                    ],
                    "x-enumDescriptions": [
                      "Sort in ascending order (small -> large)",
                      "Sort in descending order (large -> small)"
                    ]
                  }
                }
              }
            }
          }
        },
        "view": {
          "x-title": "View",
          "description": "The name or ID of a view in the Stories table. If set, only the records in that view will be returned. The records will be sorted according to the order of the view.",
          "default": "",
          "type": "string"
        }
      }
    },
    "updateAllFields": {
      "x-title": "Update All Fields",
      "description": "Whether all fields should be sent to Airtable or only specific ones",
      "default": true,
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ]
        }
      },
      "type": "boolean"
    },
    "options": {
      "x-title": "Options",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "append",
            "delete",
            "update"
          ]
        }
      },
      "type": "object",
      "properties": {
        "bulkSize": {
          "x-title": "Bulk Size",
          "description": "Number of records to process at once",
          "default": 10,
          "type": "number",
          "minimum": 1,
          "maximum": 10
        },
        "ignoreFields": {
          "x-title": "Ignore Fields",
          "description": "Comma-separated list of fields to ignore",
          "default": "",
          "x-displayOptions": {
            "show": {
              "/operation": [
                "update"
              ],
              "/updateAllFields": [
                true
              ]
            }
          },
          "type": "string"
        },
        "typecast": {
          "x-title": "Typecast",
          "description": "Whether the Airtable API should attempt mapping of string values for linked records & select options",
          "default": false,
          "x-displayOptions": {
            "show": {
              "/operation": [
                "append",
                "update"
              ]
            }
          },
          "type": "boolean"
        }
      }
    }
  },
  "x-icon": "file:airtable.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "airtableApi",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "airtableApi"
          ]
        }
      }
    },
    {
      "name": "airtableTokenApi",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "airtableTokenApi"
          ]
        }
      }
    },
    {
      "name": "airtableOAuth2Api",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "airtableOAuth2Api"
          ]
        }
      }
    }
  ]
}
