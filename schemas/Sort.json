{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sort",
  "description": "Change items order",
  "x-n8n-node-type": "sort",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "type": {
      "x-title": "Type",
      "description": "The type of sorting to perform",
      "default": "simple",
      "type": "string",
      "enum": [
        "simple",
        "random",
        "code"
      ],
      "x-enumNames": [
        "Simple",
        "Random",
        "Code"
      ]
    },
    "sortFieldsUi": {
      "x-title": "Fields To Sort By",
      "description": "The fields of the input items to sort by",
      "default": {},
      "x-displayOptions": {
        "show": {
          "type": [
            "simple"
          ]
        }
      },
      "type": "object",
      "properties": {
        "sortField": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fieldName": {
                "x-title": "Field Name",
                "description": "The field to sort by",
                "default": "",
                "x-required": true,
                "type": "string"
              },
              "order": {
                "x-title": "Order",
                "description": "The order to sort by",
                "default": "ascending",
                "type": "string",
                "enum": [
                  "ascending",
                  "descending"
                ],
                "x-enumNames": [
                  "Ascending",
                  "Descending"
                ]
              }
            }
          }
        }
      }
    },
    "code": {
      "x-title": "Code",
      "description": "Javascript code to determine the order of any two items",
      "default": "// The two items to compare are in the variables a and b\n\t// Access the fields in a.json and b.json\n\t// Return -1 if a should go before b\n\t// Return 1 if b should go before a\n\t// Return 0 if there's no difference\n\n\tfieldName = 'myField';\n\n\tif (a.json[fieldName] < b.json[fieldName]) {\n\treturn -1;\n\t}\n\tif (a.json[fieldName] > b.json[fieldName]) {\n\treturn 1;\n\t}\n\treturn 0;",
      "x-displayOptions": {
        "show": {
          "type": [
            "code"
          ]
        }
      },
      "type": "string",
      "x-rows": 10,
      "x-editor": "jsEditor"
    },
    "options": {
      "x-title": "Options",
      "default": {},
      "x-displayOptions": {
        "show": {
          "type": [
            "simple"
          ]
        }
      },
      "type": "object",
      "properties": {
        "disableDotNotation": {
          "x-title": "Disable Dot Notation",
          "description": "Whether to disallow referencing child fields using `parent.child` in the field name",
          "default": false,
          "type": "boolean"
        }
      }
    }
  },
  "x-icon": "file:sort.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ]
}
