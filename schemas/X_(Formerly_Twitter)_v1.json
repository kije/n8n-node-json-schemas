      "x-displayOptions": {
        "show": {
          "operation": [
            "search"
          ],
          "resource": [
            "tweet"
          ]
        }
      },
      "type": "boolean"
    },
    "limit": {
      "x-title": "Limit",
      "description": "Max number of results to return",
