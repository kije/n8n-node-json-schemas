        "show": {
          "operation": [
            "create"
          ],
          "resource": [
            "tweet"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "additionalFields": {
      "x-title": "Additional Fields",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "retweet"
          ],
          "resource": [
            "tweet"
          ]
        }
      },
      "type": "object",
      "properties": {
        "trimUser": {
          "x-title": "Trim User",
          "description": "Whether each tweet returned in a timeline will include a user object including only the status authors numerical ID",
          "default": false,
          "type": "boolean"
        }
      }
    },
    "tweetId": {
      "x-title": "Tweet ID",
      "description": "The ID of the tweet",
      "default": "",
