        "show": {
          "operation": [
            "create"
          ],
          "resource": [
            "directMessage"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "text": {
      "x-title": "Text",
      "description": "The text of the status update. URL encode as necessary. t.co link wrapping will affect character counts.",
