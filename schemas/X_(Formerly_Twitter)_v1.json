    "resource": {
      "x-title": "Resource",
      "default": "tweet",
      "type": "string",
      "enum": [
        "directMessage",
        "tweet"
      ],
      "x-enumNames": [
        "Direct Message",
        "Tweet"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "create",
      "x-displayOptions": {
        "show": {
          "resource": [
            "tweet"
          ]
        }
      },
      "type": "string",
      "enum": [
        "create",
        "delete",
        "like",
        "retweet",
        "search"
      ],
      "x-enumNames": [
        "Create",
        "Delete",
        "Like",
        "Retweet",
        "Search"
      ],
      "x-enumDescriptions": [
        "Create or reply a tweet",
        "Delete a tweet",
        "Like a tweet",
        "Retweet a tweet",
        "Search tweets"
      ]
    },
    "userId": {
      "x-title": "User ID",
      "description": "The ID of the user who should receive the direct message",
