{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Facebook Graph API",
  "description": "Interacts with Facebook using the Graph API",
  "x-n8n-node-type": "facebookGraphApi",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "hostUrl": {
      "x-title": "Host URL",
      "description": "The Host URL of the request. Almost all requests are passed to the graph.facebook.com host URL. The single exception is video uploads, which use graph-video.facebook.com.",
      "default": "graph.facebook.com",
      "x-required": true,
      "type": "string",
      "enum": [
        "graph.facebook.com",
        "graph-video.facebook.com"
      ],
      "x-enumNames": [
        "Default",
        "Video Uploads"
      ]
    },
    "httpRequestMethod": {
      "x-title": "HTTP Request Method",
      "description": "The HTTP Method to be used for the request",
      "default": "GET",
      "x-required": true,
      "type": "string",
      "enum": [
        "GET",
        "POST",
        "DELETE"
      ],
      "x-enumNames": [
        "GET",
        "POST",
        "DELETE"
      ]
    },
    "graphApiVersion": {
      "x-title": "Graph API Version",
      "description": "The version of the Graph API to be used in the request",
      "default": "",
      "x-required": true,
      "type": "string",
      "enum": [
        "",
        "v23.0",
        "v22.0",
        "v21.0",
        "v20.0",
        "v19.0",
        "v18.0",
        "v17.0",
        "v16.0",
        "v15.0",
        "v14.0",
        "v13.0",
        "v12.0",
        "v11.0",
        "v10.0",
        "v9.0",
        "v8.0",
        "v7.0",
        "v6.0",
        "v5.0",
        "v4.0",
        "v3.3",
        "v3.2",
        "v3.1",
        "v3.0"
      ],
      "x-enumNames": [
        "Default",
        "v23.0",
        "v22.0",
        "v21.0",
        "v20.0",
        "v19.0",
        "v18.0",
        "v17.0",
        "v16.0",
        "v15.0",
        "v14.0",
        "v13.0",
        "v12.0",
        "v11.0",
        "v10.0",
        "v9.0",
        "v8.0",
        "v7.0",
        "v6.0",
        "v5.0",
        "v4.0",
        "v3.3",
        "v3.2",
        "v3.1",
        "v3.0"
      ]
    },
    "node": {
      "x-title": "Node",
      "description": "The node on which to operate. A node is an individual object with a unique ID. For example, there are many User node objects, each with a unique ID representing a person on Facebook.",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "edge": {
      "x-title": "Edge",
      "description": "Edge of the node on which to operate. Edges represent collections of objects which are attached to the node.",
      "default": "",
      "type": "string"
    },
    "allowUnauthorizedCerts": {
      "x-title": "Ignore SSL Issues (Insecure)",
      "description": "Whether to connect even if SSL certificate validation is not possible",
      "default": false,
      "type": "boolean"
    },
    "sendBinaryData": {
      "x-title": "Send Binary File",
      "description": "Whether binary data should be sent as body",
      "default": false,
      "x-displayOptions": {
        "show": {
          "httpRequestMethod": [
            "POST",
            "PUT"
          ]
        }
      },
      "x-required": true,
      "type": "boolean"
    },
    "binaryPropertyName": {
      "x-title": "Input Binary Field",
      "description": "For Form-Data Multipart, they can be provided in the format: <code>\"sendKey1:binaryProperty1,sendKey2:binaryProperty2</code>",
      "default": "",
      "x-displayOptions": {
        "hide": {
          "sendBinaryData": [
            false
          ]
        },
        "show": {
          "httpRequestMethod": [
            "POST",
            "PUT"
          ]
        }
      },
      "type": "string"
    },
    "options": {
      "x-title": "Options",
      "default": {},
      "type": "object",
      "properties": {
        "fields": {
          "x-title": "Fields",
          "description": "The list of fields to request in the GET request",
          "default": {},
          "x-displayOptions": {
            "show": {
              "/httpRequestMethod": [
                "GET"
              ]
            }
          },
          "type": "object",
          "properties": {
            "field": {
              "x-title": "Field",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "x-title": "Name",
                    "description": "Name of the field",
                    "default": "",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "queryParameters": {
          "x-title": "Query Parameters",
          "description": "The query parameters to send",
          "default": {},
          "type": "object",
          "properties": {
            "parameter": {
              "x-title": "Parameter",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "x-title": "Name",
                    "description": "Name of the parameter",
                    "default": "",
                    "type": "string"
                  },
                  "value": {
                    "x-title": "Value",
                    "description": "Value of the parameter",
                    "default": "",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "queryParametersJson": {
          "x-title": "Query Parameters JSON",
          "description": "The query parameters to send, defined as a JSON object",
          "default": "{}",
          "oneOf": [
            {
              "type": "string",
              "description": "JSON string"
            },
            {
              "type": "object"
            },
            {
              "type": "array"
            }
          ]
        }
      }
    }
  },
  "x-icon": "file:facebook.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "facebookGraphApi",
      "required": true
    }
  ]
}
