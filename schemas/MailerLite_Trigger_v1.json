{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MailerLite Trigger",
  "description": "Starts the workflow when MailerLite events occur",
  "x-n8n-node-type": "mailerLiteTrigger",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "event": {
      "x-title": "Event",
      "description": "The events to listen to",
      "default": [],
      "x-required": true,
      "type": "string",
      "enum": [
        "campaign.sent",
        "subscriber.added_through_webform",
        "subscriber.add_to_group",
        "subscriber.automation_complete",
        "subscriber.automation_triggered",
        "subscriber.bounced",
        "subscriber.complaint",
        "subscriber.create",
        "subscriber.remove_from_group",
        "subscriber.unsubscribe",
        "subscriber.update"
      ],
      "x-enumNames": [
        "Campaign Sent",
        "Subscriber Added Through Webform",
        "Subscriber Added to Group",
        "Subscriber Automation Completed",
        "Subscriber Automation Triggered",
        "Subscriber Bounced",
        "Subscriber Complained",
        "Subscriber Created",
        "Subscriber Removed From Group",
        "Subscriber Unsubscribe",
        "Subscriber Updated"
      ],
      "x-enumDescriptions": [
        "Fired when campaign is sent",
        "Fired when a subscriber is added though a form",
        "Fired when a subscriber is added to a group",
        "Fired when subscriber finishes automation",
        "Fired when subscriber starts automation",
        "Fired when an email address bounces",
        "Fired when subscriber marks a campaign as a spam",
        "Fired when a new subscriber is added to an account",
        "Fired when a subscriber is removed from a group",
        "Fired when a subscriber becomes unsubscribed",
        "Fired when any of the subscriber's custom fields are updated"
      ]
    }
  },
  "x-icon": "file:MailerLite.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "mailerLiteApi",
      "required": true
    }
  ],
  "x-webhooks": "true"
}
