{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Form.io Trigger",
  "description": "Handle form.io events via webhooks",
  "x-n8n-node-type": "formIoTrigger",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "projectId": {
      "x-title": "Project Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "formId": {
      "x-title": "Form Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-required": true,
      "type": "string"
    },
    "events": {
      "x-title": "Trigger Events",
      "default": [],
      "x-required": true,
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "create",
          "update"
        ]
      },
      "x-enumNames": [
        "Submission Created",
        "Submission Updated"
      ]
    },
    "simple": {
      "x-title": "Simplify",
      "description": "Whether to return a simplified version of the response instead of the raw data",
      "default": true,
      "type": "boolean"
    }
  },
  "x-subtitle": "={{$parameter[\"event\"]}}",
  "x-icon": "file:formio.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "formIoApi",
      "required": true
    }
  ],
  "x-webhooks": "true"
}
