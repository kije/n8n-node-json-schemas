{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Microsoft SQL",
  "description": "Get, add and update data in Microsoft SQL",
  "x-n8n-node-type": "microsoftSql",
  "x-n8n-version": [
    1,
    1.1
  ],
  "x-n8n-group": [
    "input"
  ],
  "type": "object",
  "properties": {
    "operation": {
      "x-title": "Operation",
      "default": "insert",
      "type": "string",
      "enum": [
        "executeQuery",
        "insert",
        "update",
        "delete"
      ],
      "x-enumNames": [
        "Execute Query",
        "Insert",
        "Update",
        "Delete"
      ],
      "x-enumDescriptions": [
        "Execute an SQL query",
        "Insert rows in database",
        "Update rows in database",
        "Delete rows in database"
      ]
    },
    "query": {
      "x-title": "Query",
      "description": "The SQL query to execute",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "executeQuery"
          ]
        }
      },
      "x-required": true,
      "type": "string",
      "x-editor": "sqlEditor"
    },
    "table": {
      "x-title": "Table",
      "description": "Name of the table in which to delete data",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "delete"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "columns": {
      "x-title": "Columns",
      "description": "Comma-separated list of the properties which should used as columns for rows to update",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ]
        }
      },
      "type": "string"
    },
    "updateKey": {
      "x-title": "Update Key",
      "description": "Name of the property which decides which rows in the database should be updated. Normally that would be \"id\".",
      "default": "id",
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "deleteKey": {
      "x-title": "Delete Key",
      "description": "Name of the property which decides which rows in the database should be deleted. Normally that would be \"id\".",
      "default": "id",
      "x-displayOptions": {
        "show": {
          "operation": [
            "delete"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    }
  },
  "x-icon": "file:mssql.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "microsoftSql",
      "required": true,
      "testedBy": "microsoftSqlConnectionTest"
    }
  ]
}
