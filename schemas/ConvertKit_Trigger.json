{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConvertKit Trigger",
  "description": "Handle ConvertKit events via webhooks",
  "x-n8n-node-type": "convertKitTrigger",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "trigger"
  ],
  "type": "object",
  "properties": {
    "event": {
      "x-title": "Event",
      "description": "The events that can trigger the webhook and whether they are enabled",
      "default": "",
      "x-required": true,
      "type": "string",
      "enum": [
        "formSubscribe",
        "linkClick",
        "productPurchase",
        "purchaseCreate",
        "courseComplete",
        "courseSubscribe",
        "subscriberActivate",
        "subscriberUnsubscribe",
        "tagAdd",
        "tagRemove"
      ],
      "x-enumNames": [
        "Form Subscribe",
        "Link Click",
        "Product Purchase",
        "Purchase Created",
        "Sequence Complete",
        "Sequence Subscribe",
        "Subscriber Activated",
        "Subscriber Unsubscribe",
        "Tag Add",
        "Tag Remove"
      ]
    },
    "formId": {
      "x-title": "Form Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-displayOptions": {
        "show": {
          "event": [
            "formSubscribe"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "courseId": {
      "x-title": "Sequence Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-displayOptions": {
        "show": {
          "event": [
            "courseSubscribe",
            "courseComplete"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "link": {
      "x-title": "Initiating Link",
      "description": "The URL of the initiating link",
      "default": "",
      "x-displayOptions": {
        "show": {
          "event": [
            "linkClick"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "productId": {
      "x-title": "Product ID",
      "default": "",
      "x-displayOptions": {
        "show": {
          "event": [
            "productPurchase"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "tagId": {
      "x-title": "Tag Name or ID",
      "description": "Choose from the list, or specify an ID using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>",
      "default": "",
      "x-displayOptions": {
        "show": {
          "event": [
            "tagAdd",
            "tagRemove"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    }
  },
  "x-subtitle": "={{$parameter[\"event\"]}}",
  "x-icon": "file:convertKit.svg",
  "x-inputs": [],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "convertKitApi",
      "required": true
    }
  ],
  "x-webhooks": "true"
}
