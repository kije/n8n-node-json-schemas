{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWS Bedrock Chat Model",
  "description": "Language Model AWS Bedrock",
  "x-n8n-node-type": "lmChatAwsBedrock",
  "x-n8n-version": [
    1,
    1.1
  ],
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "modelSource": {
      "x-title": "Model Source",
      "description": "Choose between on-demand foundation models or inference profiles",
      "default": "onDemand",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.1
              }
            }
          ]
        }
      },
      "type": "string",
      "enum": [
        "onDemand",
        "inferenceProfile"
      ],
      "x-enumNames": [
        "On-Demand Models",
        "Inference Profiles"
      ],
      "x-enumDescriptions": [
        "Standard foundation models with on-demand pricing",
        "Cross-region inference profiles (required for models like Claude Sonnet 4 and others)"
      ]
    },
    "model": {
      "x-title": "Model",
      "description": "The inference profile which will generate the completion. <a href=\"https://docs.aws.amazon.com/bedrock/latest/userguide/inference-profiles-use.html\">Learn more</a>.",
      "default": "",
      "x-displayOptions": {
        "show": {
          "modelSource": [
            "inferenceProfile"
          ]
        }
      },
      "type": "string"
    },
    "options": {
      "x-title": "Options",
      "description": "Additional options to add",
      "default": {},
      "type": "object",
      "properties": {
        "maxTokensToSample": {
          "x-title": "Maximum Number of Tokens",
          "description": "The maximum number of tokens to generate in the completion",
          "default": 2000,
          "type": "number"
        },
        "temperature": {
          "x-title": "Sampling Temperature",
          "description": "Controls randomness: Lowering results in less random completions. As the temperature approaches zero, the model will become deterministic and repetitive.",
          "default": 0.7,
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "x-precision": 1
        }
      }
    }
  },
  "x-icon": "file:bedrock.svg",
  "x-inputs": [],
  "x-outputs": [
    "ai_languageModel"
  ],
  "x-credentials": [
    {
      "name": "aws",
      "required": true
    }
  ]
}
