{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Splunk",
  "description": "Consume the Splunk Enterprise API",
  "x-n8n-node-type": "splunk",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "resource": {
      "x-title": "Resource",
      "default": "searchJob",
      "type": "string",
      "enum": [
        "firedAlert",
        "searchConfiguration",
        "searchJob",
        "searchResult",
        "user"
      ],
      "x-enumNames": [
        "Fired Alert",
        "Search Configuration",
        "Search Job",
        "Search Result",
        "User"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "create",
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ]
        }
      },
      "type": "string",
      "enum": [
        "create",
        "delete",
        "get",
        "getAll",
        "update"
      ],
      "x-enumNames": [
        "Create",
        "Delete",
        "Get",
        "Get Many",
        "Update"
      ],
      "x-enumDescriptions": [
        "Create an user",
        "Delete an user",
        "Retrieve an user",
        "Retrieve many users",
        "Update an user"
      ]
    },
    "searchConfigurationId": {
      "x-title": "Search Configuration ID",
      "description": "ID of the search configuration to retrieve",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "searchConfiguration"
          ],
          "operation": [
            "get"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "returnAll": {
      "x-title": "Return All",
      "description": "Whether to return all results or only up to a given limit",
      "default": false,
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "getAll"
          ]
        }
      },
      "type": "boolean"
    },
    "limit": {
      "x-title": "Limit",
      "description": "Max number of results to return",
      "default": 50,
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "getAll"
          ],
          "returnAll": [
            false
          ]
        }
      },
      "type": "number",
      "minimum": 1
    },
    "options": {
      "x-title": "Options",
      "default": {},
      "x-displayOptions": {
        "show": {
          "resource": [
            "searchResult"
          ],
          "operation": [
            "getAll"
          ]
        }
      },
      "type": "object",
      "properties": {
        "add_summary_to_metadata": {
          "x-title": "Add Summary to Metadata",
          "description": "Whether to include field summary statistics in the response",
          "default": false,
          "type": "boolean"
        }
      }
    },
    "search": {
      "x-title": "Query",
      "description": "Search language string to execute, in Splunk's <a href=\"https://docs.splunk.com/Documentation/Splunk/latest/SearchReference/WhatsInThisManual\">Search Processing Language</a>",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "searchJob"
          ],
          "operation": [
            "create"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "additionalFields": {
      "x-title": "Additional Fields",
      "default": {},
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "create"
          ]
        }
      },
      "type": "object",
      "properties": {
        "email": {
          "x-title": "Email",
          "default": "",
          "type": "string"
        },
        "realname": {
          "x-title": "Full Name",
          "description": "Full name of the user",
          "default": "",
          "type": "string"
        }
      }
    },
    "searchJobId": {
      "x-title": "Search ID",
      "description": "ID of the search whose results to retrieve",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "searchResult"
          ],
          "operation": [
            "getAll"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "filters": {
      "x-title": "Filters",
      "default": {},
      "x-displayOptions": {
        "show": {
          "resource": [
            "searchResult"
          ],
          "operation": [
            "getAll"
          ]
        }
      },
      "type": "object",
      "properties": {
        "keyValueMatch": {
          "x-title": "Key-Value Match",
          "description": "Key-value pair to match against. Example: if \"Key\" is set to <code>user</code> and \"Field\" is set to <code>john</code>, only the results where <code>user</code> is <code>john</code> will be returned.",
          "default": {},
          "type": "object",
          "properties": {
            "keyValuePair": {
              "x-title": "Key-Value Pair",
              "type": "object",
              "properties": {
                "key": {
                  "x-title": "Key",
                  "description": "Key to match against",
                  "default": "",
                  "type": "string"
                },
                "value": {
                  "x-title": "Value",
                  "description": "Value to match against",
                  "default": "",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "name": {
      "x-title": "Name",
      "description": "Login name of the user",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "create"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "roles": {
      "x-title": "Role Names or IDs",
      "description": "Comma-separated list of roles to assign to the user. Choose from the list, or specify IDs using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>.",
      "default": [],
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "create"
          ]
        }
      },
      "x-required": true,
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "password": {
      "x-title": "Password",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "create"
          ]
        }
      },
      "x-required": true,
      "type": "string",
      "format": "password"
    },
    "userId": {
      "x-title": "User ID",
      "description": "ID of the user to update",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "update"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "updateFields": {
      "x-title": "Update Fields",
      "default": {},
      "x-displayOptions": {
        "show": {
          "resource": [
            "user"
          ],
          "operation": [
            "update"
          ]
        }
      },
      "type": "object",
      "properties": {
        "email": {
          "x-title": "Email",
          "default": "",
          "type": "string"
        },
        "realname": {
          "x-title": "Full Name",
          "description": "Full name of the user",
          "default": "",
          "type": "string"
        },
        "password": {
          "x-title": "Password",
          "default": "",
          "type": "string",
          "format": "password"
        },
        "roles": {
          "x-title": "Role Names or IDs",
          "description": "Comma-separated list of roles to assign to the user. Choose from the list, or specify IDs using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>.",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "x-subtitle": "={{$parameter[\"operation\"] + \": \" + $parameter[\"resource\"]}}",
  "x-icon": "file:splunk.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "splunkApi",
      "required": true
    }
  ]
}
