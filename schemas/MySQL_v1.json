{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MySQL",
  "description": "Get, add and update data in MySQL",
  "x-n8n-node-type": "mySql",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "input"
  ],
  "type": "object",
  "properties": {
    "operation": {
      "x-title": "Operation",
      "default": "insert",
      "type": "string",
      "enum": [
        "executeQuery",
        "insert",
        "update"
      ],
      "x-enumNames": [
        "Execute Query",
        "Insert",
        "Update"
      ],
      "x-enumDescriptions": [
        "Execute an SQL query",
        "Insert rows in database",
        "Update rows in database"
      ]
    },
    "query": {
      "x-title": "Query",
      "description": "The SQL query to execute",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "executeQuery"
          ]
        }
      },
      "x-required": true,
      "type": "string",
      "x-editor": "sqlEditor"
    },
    "table": {
      "x-title": "Table",
      "description": "Name of the table in which to update data in",
      "default": {
        "mode": "list",
        "value": ""
      },
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ]
        }
      },
      "x-required": true,
      "type": "object",
      "properties": {
        "__rl": {
          "type": "boolean",
          "const": true
        },
        "mode": {
          "type": "string",
          "enum": [
            "list",
            "name"
          ]
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "mode",
        "value"
      ],
      "x-modes": [
        {
          "name": "list",
          "displayName": "From List",
          "type": "list"
        },
        {
          "name": "name",
          "displayName": "Name",
          "type": "string"
        }
      ]
    },
    "columns": {
      "x-title": "Columns",
      "description": "Comma-separated list of the properties which should used as columns for rows to update",
      "default": "",
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ]
        }
      },
      "type": "string"
    },
    "options": {
      "x-title": "Options",
      "description": "Modifiers for INSERT statement",
      "default": {},
      "x-displayOptions": {
        "show": {
          "operation": [
            "insert"
          ]
        }
      },
      "type": "object",
      "properties": {
        "ignore": {
          "x-title": "Ignore",
          "description": "Whether to ignore any ignorable errors that occur while executing the INSERT statement",
          "default": true,
          "type": "boolean"
        },
        "priority": {
          "x-title": "Priority",
          "description": "Ignore any ignorable errors that occur while executing the INSERT statement",
          "default": "LOW_PRIORITY",
          "type": "string",
          "enum": [
            "LOW_PRIORITY",
            "HIGH_PRIORITY"
          ],
          "x-enumNames": [
            "Low Prioirity",
            "High Priority"
          ],
          "x-enumDescriptions": [
            "Delays execution of the INSERT until no other clients are reading from the table",
            "Overrides the effect of the --low-priority-updates option if the server was started with that option. It also causes concurrent inserts not to be used."
          ]
        }
      }
    },
    "updateKey": {
      "x-title": "Update Key",
      "description": "Name of the property which decides which rows in the database should be updated. Normally that would be \"id\".",
      "default": "id",
      "x-displayOptions": {
        "show": {
          "operation": [
            "update"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    }
  },
  "x-icon": "file:mysql.svg",
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "mySql",
      "required": true,
      "testedBy": "mysqlConnectionTest"
    }
  ]
}
