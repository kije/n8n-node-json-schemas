{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Character Text Splitter",
  "description": "Split text into chunks by characters",
  "x-n8n-node-type": "textSplitterCharacterTextSplitter",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "separator": {
      "x-title": "Separator",
      "default": "",
      "type": "string"
    },
    "chunkSize": {
      "x-title": "Chunk Size",
      "description": "Maximum number of characters per chunk",
      "default": 1000,
      "type": "number"
    },
    "chunkOverlap": {
      "x-title": "Chunk Overlap",
      "description": "Number of characters shared between consecutive chunks to preserve context",
      "default": 0,
      "type": "number"
    }
  },
  "x-icon": "fa:grip-lines-vertical",
  "x-inputs": [],
  "x-outputs": [
    "ai_textSplitter"
  ]
}
