          "alert_create",
          "alert_delete",
          "alert_update",
          "case_create",
          "case_delete",
          "case_update",
          "comment_create",
          "comment_delete",
          "comment_update",
          "observable_create",
          "observable_delete",
          "observable_update",
          "page_create",
          "page_delete",
          "page_update",
          "task_create",
          "task_update",
          "log_create",
          "log_delete",
          "log_update"
