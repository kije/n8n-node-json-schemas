        "Alert Created",
        "Alert Deleted",
        "Alert Updated",
        "Case Created",
        "Case Deleted",
        "Case Updated",
        "Comment Created",
        "Comment Deleted",
        "Comment Updated",
        "Observable Created",
        "Observable Deleted",
        "Observable Updated",
        "Page Created",
        "Page Deleted",
        "Page Updated",
        "Task Created",
        "Task Updated",
        "Task Log Created",
        "Task Log Deleted",
        "Task Log Updated"
      ]
