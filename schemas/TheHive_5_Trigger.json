                "enum": [
                  "equal",
                  "notEqual",
                  "includes"
                ],
                "x-enumNames": [
                  "Equal",
                  "Not Equal",
                  "Includes"
                ],
                "x-enumDescriptions": [
                  "Field is equal to value",
                  "Field is not equal to value",
                  "Field includes value"
                ]
              },
              "value": {
                "x-title": "Value",
                "default": "",
                "type": "string"
              }
            }
          }
        }
