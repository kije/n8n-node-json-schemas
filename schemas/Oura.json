{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Oura",
  "description": "Consume Oura API",
  "x-n8n-node-type": "oura",
  "x-n8n-version": 1,
  "x-n8n-group": [
    "output"
  ],
  "type": "object",
  "properties": {
    "resource": {
      "x-title": "Resource",
      "default": "summary",
      "type": "string",
      "enum": [
        "profile",
        "summary"
      ],
      "x-enumNames": [
        "Profile",
        "Summary"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "getSleep",
      "x-displayOptions": {
        "show": {
          "resource": [
            "summary"
          ]
        }
      },
      "type": "string",
      "enum": [
        "getActivity",
        "getReadiness",
        "getSleep"
      ],
      "x-enumNames": [
        "Get Activity Summary",
        "Get Readiness Summary",
        "Get Sleep Periods"
      ],
      "x-enumDescriptions": [
        "Get the user's activity summary",
        "Get the user's readiness summary",
        "Get the user's sleep summary"
      ]
    },
    "returnAll": {
      "x-title": "Return All",
      "description": "Whether to return all results or only up to a given limit",
      "default": false,
      "x-displayOptions": {
        "show": {
          "resource": [
            "summary"
          ]
        }
      },
      "type": "boolean"
    },
    "limit": {
      "x-title": "Limit",
      "description": "Max number of results to return",
      "default": 5,
      "x-displayOptions": {
        "show": {
          "resource": [
            "summary"
          ],
          "returnAll": [
            false
          ]
        }
      },
      "type": "number",
      "minimum": 1,
      "maximum": 10
    },
    "filters": {
      "x-title": "Filters",
      "default": {},
      "x-displayOptions": {
        "show": {
          "resource": [
            "summary"
          ]
        }
      },
      "type": "object",
      "properties": {
        "end": {
          "x-title": "End Date",
          "description": "End date for the summary retrieval. If omitted, it defaults to the current day.",
          "default": "",
          "type": "string",
          "format": "date-time"
        },
        "start": {
          "x-title": "Start Date",
          "description": "Start date for the summary retrieval. If omitted, it defaults to a week ago.",
          "default": "",
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "x-subtitle": "={{$parameter[\"operation\"] + \": \" + $parameter[\"resource\"]}}",
  "x-icon": {
    "light": "file:oura.svg",
    "dark": "file:oura.dark.svg"
  },
  "x-inputs": [
    "main"
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "ouraApi",
      "required": true
    }
  ]
}
