{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenAI Assistant",
  "description": "Utilizes Assistant API from Open AI.",
  "x-n8n-node-type": "openAiAssistant",
  "x-n8n-version": [
    1,
    1.1
  ],
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "mode": {
      "x-title": "Operation",
      "default": "existing",
      "type": "string",
      "enum": [
        "new",
        "existing"
      ],
      "x-enumNames": [
        "Use New Assistant",
        "Use Existing Assistant"
      ]
    },
    "name": {
      "x-title": "Name",
      "default": "",
      "x-displayOptions": {
        "show": {
          "/mode": [
            "new"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "instructions": {
      "x-title": "Instructions",
      "description": "How the Assistant and model should behave or respond",
      "default": "",
      "x-displayOptions": {
        "show": {
          "/mode": [
            "new"
          ]
        }
      },
      "type": "string",
      "x-rows": 5
    },
    "model": {
      "x-title": "Model",
      "description": "The model which will be used to power the assistant. <a href=\"https://beta.openai.com/docs/models/overview\">Learn more</a>. The Retrieval tool requires gpt-3.5-turbo-1106 and gpt-4-1106-preview models.",
      "default": "gpt-3.5-turbo-1106",
      "x-displayOptions": {
        "show": {
          "/mode": [
            "new"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "assistantId": {
      "x-title": "Assistant",
      "description": "The assistant to use. <a href=\"https://beta.openai.com/docs/assistants/overview\">Learn more</a>.",
      "default": "",
      "x-displayOptions": {
        "show": {
          "/mode": [
            "existing"
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "text": {
      "x-title": "Text",
      "default": "={{ $json.chatInput }}",
      "x-displayOptions": {
        "show": {
          "@version": [
            1.1
          ]
        }
      },
      "x-required": true,
      "type": "string"
    },
    "nativeTools": {
      "x-title": "OpenAI Tools",
      "default": [],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "code_interpreter",
          "retrieval"
        ]
      },
      "x-enumNames": [
        "Code Interpreter",
        "Knowledge Retrieval"
      ]
    },
    "options": {
      "x-title": "Options",
      "description": "Additional options to add",
      "default": {},
      "type": "object",
      "properties": {
        "baseURL": {
          "x-title": "Base URL",
          "description": "Override the default base URL for the API",
          "default": "https://api.openai.com/v1",
          "type": "string"
        },
        "maxRetries": {
          "x-title": "Max Retries",
          "description": "Maximum number of retries to attempt",
          "default": 2,
          "type": "number"
        },
        "timeout": {
          "x-title": "Timeout",
          "description": "Maximum amount of time a request is allowed to take in milliseconds",
          "default": 10000,
          "type": "number"
        }
      }
    }
  },
  "x-subtitle": "Open AI Assistant",
  "x-icon": "fa:robot",
  "x-inputs": [
    {
      "type": "main"
    },
    {
      "type": "ai_tool",
      "displayName": "Tools"
    }
  ],
  "x-outputs": [
    "main"
  ],
  "x-credentials": [
    {
      "name": "openAiApi",
      "required": true
    }
  ]
}
