      "x-enumNames": [
        "Contact"
      ]
    },
    "operation": {
      "x-title": "Operation",
      "default": "enrich",
      "x-required": true,
      "type": "string",
      "enum": [
        "enrich",
        "fetchRequest"
      ],
      "x-enumNames": [
        "Enrich",
        "Fetch Request"
      ],
      "x-enumDescriptions": [
        "Find B2B emails and enrich your contact from his name and his website",
        ""
      ]
    },
    "requestId": {
      "x-title": "Request ID",
      "default": "",
      "x-displayOptions": {
        "show": {
          "resource": [
            "contact"
