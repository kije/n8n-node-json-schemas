          "default": false,
          "type": "boolean"
        },
        "language": {
          "x-title": "Language",
          "description": "Whether the response is in English or French",
          "default": "en",
          "type": "string",
          "enum": [
            "en",
            "fr"
          ],
          "x-enumNames": [
            "English",
