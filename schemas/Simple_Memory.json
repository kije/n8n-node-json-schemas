{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Memory",
  "description": "Stores in n8n memory, so no credentials required",
  "x-n8n-node-type": "memoryBufferWindow",
  "x-n8n-version": [
    1,
    1.1,
    1.2,
    1.3
  ],
  "x-n8n-group": [
    "transform"
  ],
  "type": "object",
  "properties": {
    "sessionKey": {
      "x-title": "Key",
      "description": "The key to use to store session ID in the memory",
      "default": "",
      "x-displayOptions": {
        "show": {
          "sessionIdType": [
            "customKey"
          ]
        }
      },
      "type": "string"
    },
    "sessionIdType": {
      "x-title": "Session ID",
      "default": "fromInput",
      "x-displayOptions": {
        "show": {
          "@version": [
            {
              "_cnd": {
                "gte": 1.2
              }
            }
          ]
        }
      },
      "type": "string",
      "enum": [
        "fromInput",
        "customKey"
      ],
      "x-enumNames": [
        "Connected Chat Trigger Node",
        "Define below"
      ],
      "x-enumDescriptions": [
        "Looks for an input field called 'sessionId' that is coming from a directly connected Chat Trigger",
        "Use an expression to reference data in previous nodes or enter static text"
      ]
    },
    "contextWindowLength": {
      "x-title": "Context Window Length",
      "default": 5,
      "type": "number"
    }
  },
  "x-icon": "fa:database",
  "x-inputs": [],
  "x-outputs": [
    "ai_memory"
  ]
}
