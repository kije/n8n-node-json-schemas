      "enum": [
        "file",
        "folder"
      ],
      "x-enumNames": [
        "File",
        "Folder"
      ]
    },
    "targetId": {
      "x-title": "Target ID",
      "description": "The ID of the item to trigger a webhook",
      "default": "",
      "type": "string"
