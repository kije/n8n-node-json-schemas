          "COMMENT.UPDATED",
          "FILE.COPIED",
          "FILE.DELETED",
          "FILE.DOWNLOADED",
          "FILE.LOCKED",
          "FILE.MOVED",
          "FILE.PREVIEWED",
          "FILE.RENAMED",
          "FILE.RESTORED",
          "FILE.TRASHED",
          "FILE.UNLOCKED",
          "FILE.UPLOADED",
          "FOLDER.COPIED",
          "FOLDER.CREATED",
          "FOLDER.DELETED",
          "FOLDER.DOWNLOADED",
          "FOLDER.MOVED",
          "FOLDER.RENAMED",
          "FOLDER.RESTORED",
          "FOLDER.TRASHED",
          "METADATA_INSTANCE.CREATED",
          "METADATA_INSTANCE.DELETED",
          "METADATA_INSTANCE.UPDATED",
          "SHARED_LINK.CREATED",
          "SHARED_LINK.DELETED",
          "SHARED_LINK.UPDATED",
          "TASK_ASSIGNMENT.CREATED",
          "TASK_ASSIGNMENT.UPDATED",
          "WEBHOOK.DELETED"
